header {
  height: 44px;
  line-height: 44px;
  background-color: #ff841d;
  color: #fff;
  position: relative;
}
header h2 {
  padding: 0 60px;
  line-height: 44px;
  font-size: 20px;
  margin: 0;
  text-align: center;
}
header .back,
header .app {
  position: absolute;
  width: 50px;
  height: 44px;
  top: 0;
}
header .back {
  left: 5px;
}
header .back a {
  color: #fff;
  font-size: 20px;
  top: 5px;
}
header .app {
  right: 5px;
}
header .app img {
  height: 34px;
}
.main ul {
  padding: 0;
  margin: 0;
}
.main ul li {
  list-style: none;
  float: left;
  width: 50%;
  border: 1px solid #eeeeee;
  border-top-width: 0;
  text-align: center;
}
.main ul li a {
  display: block;
}
.main ul li a .img {
  width: 140px;
  height: 140px;
  margin: 10px auto;
}
.main ul li a .img img {
  width: 140px;
  height: 140px;
}
.main ul li a .title {
  padding: 0 8px;
  font-size: 14px;
  font-weight: bold;
  color: #333333;
  text-align-last: left;
}
.main ul li a .subtit {
  color: #ff6c00;
  text-align-last: left;
  height: 18px;
  line-height: 18px;
  padding: 0 8px;
}
.main ul li a .info {
  font-size: 12px;
  color: #a1a1a1;
  text-align: left;
  padding: 0 8px;
}
.bottom {
  background-color: #ebebeb;
  height: 35px;
  width: 100%;
  float: left;
  border-top: #eeeeee;
}
.bottom .bottom-nav {
  margin-top: 20px;
  height: 35px;
  width: 100%;
  border-top: 1px solid #c4c4c4;
  border-bottom: 1px solid #c4c4c4;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
}
.bottom .bottom-nav a {
  display: block;
  height: 35px;
  width: 40px;
  line-height: 35px;
  float: left;
  padding-left: 10px;
  color: #000;
}
.bottom .bottom-nav span {
  float: left;
  display: block;
  height: 35px;
  width: 100px;
  line-height: 35px;
}
.bottom .login {
  background: #ebebeb;
  width: 100%;
  padding-top: 25px;
}
.bottom .login .bottom-login {
  float: left;
  height: 35px;
  width: 33.33%;
  background-color: #ebebeb;
  border: #c4c4c4;
}
