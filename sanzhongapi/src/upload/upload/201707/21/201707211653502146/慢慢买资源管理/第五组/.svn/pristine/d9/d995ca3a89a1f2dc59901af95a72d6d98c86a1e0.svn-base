.mmm_top {
    height: 51px;
    width: 100%;
    background-color: #ff841d;
    .top_conten {
        height: 100%;
        >a {
            display: block;
            height: 100%;
            position: relative;
            .top_img_left {
                display: inline-block;
                width: 185.5px;
                height: 25px;
                background: url("../images/header_logo.png") 0px 0px;
                background-size: 100%;
                position: absolute;
                top: 50%;
                left: 18px;
                transform: translateY(-50%);
            }
            .top_img_right {
                display: inline-block;
                width: 34px;
                height: 34px;
                background: url("../images/header_app.png") 0px 0px; //  background:url("../images/header_logo.png") 0px 0px; 
                background-size: 100%;
                position: absolute;
                top: 50%;
                right: 18px;
                transform: translateY(-50%);
            }
        }
    }
}

// 搜索框
.mmm_search {
    width: 100%;
    height: 51px;
    position: relative;
    padding: 10px;
    .mmm_conten {
        position: relative;
        width: 100%;
        padding-right: 65px;
        span:nth-of-type(1) {
            display: inline-block;
            width: 100%; // padding-right:90px;
            //   position:absolute;
            //      top:50%;
            //      right:0px;
            input {
                display: inline-block;
                border: 1px solid #f1f1f1;
                height: 28px;
                border-radius: 10px;
                padding-left: 10px;
                background-color: #f1f1f1;
            }
        }
        span:nth-of-type(2) {
            display: inline-block;
            padding: 2px 10px; //   border: 1px solid #f1f1f1;
            background-color: #ff841d;
            border-radius: 10px; //  width: 100%;  
            position: absolute;
            top: 50%;
            right: 0px;
            transform: translateY(-50%);
            a {
                display: inline-block;
                color: #fff;
            }
        }
    }
}

.hengxian {
    width: 100%;
    height: 10px;
    background-color: #f6f6f6;
}

// 主体菜单框
.mmm_list {

    height:286px;
    overflow: hidden;
    ul {
        li {
            float: left;
            width: 25%;
            box-sizing: border-box;
            padding: 10px 10px; //  float:left;
            img {
                display: block;
                margin: 0 auto;
                padding-left: 10px;
            }
            p {
                text-align: center;
                margin-top: 5px;
                font-size: 16px;
            }
        }
        li:nth-of-type(5) {
            clear: both;
        }
        li:nth-of-type(9) {
            clear: both;
        }
    }
}

// 超值折扣推荐
.tuijian {
    //  border:1px solid red;
    background-color: #ff9d1f;
    line-height: 32px;
    width: 100%;
    a:nth-of-type(1) {
        float: left;
        padding-left: 12px;
        p {
            margin: 0px;
