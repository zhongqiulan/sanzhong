*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
p,div{
    padding: 0;
    margin: 0;
}
body{
    color: #000;
}
a{
    text-decoration: none;
         display: inline-block;
         color: #000;
   
}

.clearfix:after{
