@import '../base/base.less';
@font-face {
  font-family: 'icomoon';
  src:  url('fonts/icomoon.eot?5je7j5');
  src:  url('fonts/icomoon.eot?5je7j5#iefix') format('embedded-opentype'),
    url('fonts/icomoon.ttf?5je7j5') format('truetype'),
    url('fonts/icomoon.woff?5je7j5') format('woff'),
    url('fonts/icomoon.svg?5je7j5#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-start:before {
  content: "\e900";
  color: #ff9000;
}



#brand-category{
    // padding-bottom: 60px;
      // 头部区域
    //顶部样式
    .top{
        .navbar-default{
            width: 100%;
            height: 50px;
            background: #ff841d;
            border-bottom: 1px solid #e6e6e6;           
            .navbar-brand{
                width: 100%;
                img{
                    width: 185px;
                }
            }
            .pull-right{
                @media screen and (max-width: 300px){
                    display: none;
                }
                width:34px;
                padding-top:8px;
                position:relative;
                img{
                    position:absolute;
                    width:34px;
                    right:7px;
                    top:7px;

                }
            }
        }
    }
    //搜索框样式
    .search{
            height: 30px;
            padding: 10px;
            background-color: #fff;
            position:relative;
            top:-20px;
            input{
                height: 30px;
                background: #f1f1f1;
                border-radius: 25px;               
                width: 100%;
                border-width: 0;
                padding-left: 30px;
                font-size: 16px;
            }
            button{
                height: 30px;
                background: #ff841d;
                border-radius: 25px;
                color:#fff;
                width: 60px;
                position:absolute;
                top:10px;
                right:10px;
                border-width: 0;
            }
    }
    // 网页导航项
    .header{
        font-size: 14px;
        background-color: #f5f5f5;
        border-top:1px solid #d5d5d5;
        border-bottom:1px solid #d5d5d5;
        span{
            font-size: 12px;
            padding-top:13px;
        }
        a{
            padding:10px 4px;
            color:#000;
        }
    }

    h4.title{
        height: 40px;
        padding-left: 10px;
        border-top:1px solid #ccc;
        border-bottom: 1px solid #ccc;
        line-height: 32px;
        font-size: 14px;
        margin:0;
        font-weight: 900;
        background-color: #f3f3f3;
        a{
            color: #884809;
        }
    }
    ul{
        list-style: none;
        margin:0;
        padding: 0;
    }
    li{
        margin:0;
        padding: 0;
    }
    a{
        color: #000;
        display: block;
    }
    // 平板电视那个牌子好
    #brand{
      li{
        //   好蠢
            &:first-child i{
                background-color: #f10e0e;
            }
            &:nth-of-type(2) i{
                background-color: #ff9314;
            }
            &:nth-of-type(3) i{
                background-color: #8adf5b;
            }
          a{
            position:relative;
            height: 54px;
            background-color: #f2f2f2;
            width: 100%;
            border-bottom: 1px solid #ccc;
            i{
                position:absolute;
                left: 9px;
                top:9px;
                width: 17px;
                height: 17px;
                background-color: #c9c9c9;
                line-height: 17px;
                text-align: center;
                color:#fff;
                font-style: normal;
            }
            .des{
                position:absolute;
                left:36px;
                top:0;
                // height: 54px;
                .des-brand{
                    margin:8px 0 0px 0;
                }
                .des-sale{
                    font-size: 12px;
                    color: #9e9e9e;
                }
            }
            span{
               line-height: 54px;
               font-size: 20px;
               color: #9e9e9e;
               margin-right: 10px;
            }
           
          }
        
      }
    }
    // 平板电视产品销量排行
    #sale{
        .sale-content{
            ul{
                li{
                    a{
                        display: block;
                        width: 100%;
                        height: 120px;
                        padding:10px 10px 10px 110px;
                        background-color: #f2f2f2;
                        border-bottom: 1px solid #ccc;
                        position:relative;
                        img{
                            position:absolute;
                            left:10px;
                            display: block;
                            width: 100px;
                            height: 100px;
                        }
                        .detail{
                            padding-left:20px; 
                            .title{
                                font-size: 14px;
                            }
                            .price{
                                margin-top:6px;
                                span{
                                    font-size: 16px;
                                    color:#ea3916;
                                }
                                .stars{
                                    i{
                                        font-size: 18px;
                                    }
                                }
                            }
                            .other{
                                font-size: 12px;
                                color:#a4999e;
                                margin-top:10px;
                            }
                        }
                    }
                }
            }
        }
    }
    // 平板电视最有用的用户评论
    #recommend{
        .recommend-content{
            box-sizing: border-box;
            padding:10px;
            background-color: #f2f2f2;
          
            li{
                .protit{
                    img{
                        display: inline-block;
                        width: 100px;
                        height: 100px;
                    }
                    span{
                        vertical-align: top;
                        margin-left: 10px;
                        color: #999999;
                    }
                }
                .plbox{
                    position:relative;
                    background-color: #f8f8f8;
                    padding:10px;
                    margin-top:15px;
                    s{
                        position:absolute;
                        left: 30px;
                        top:-20px;
                        width: 0;
                        height: 0;
                        border-width: 10px;
                        border-style: solid;
                        border-color: transparent transparent  #f8f8f8 transparent;
                    }
                    .name{
                        .phone{
                            float: left;
                            color: #4f6900;;
                        }
                        .stars{
                            margin-left: 5px;
                            float: left;
                            i{
                                float: left;
                                margin-right: 1px;
                                font-size: 16px;
                            }
                        }
                        .time{
                            float: right;
                            color: #b9a4a0;
                            font-size: 12px;
                        }
                    }
                    .con{
                        margin-top:10px;
                        font-size: 14px;
                    }
                }
            }
        }
    }
    // 网页底部
        footer{
            padding-top:20px;
            background: #efefef;
            .menu{
                ul{
                    padding:0;
                    margin:0;
                    list-style: none;
                }
                li{
                    img{
                        display: inline-block;
                        width: 15px;
                        height: 15px;
                        vertical-align: baseline;
                        margin-right: 4px;
                    }
                    height: 35px;
                    line-height: 35px;
                    text-align: center;
                    border-bottom: 1px solid #c4c4c4;
                    border-top: 1px solid #c4c4c4;
                    float: left;
                    width: 33.3%;
                    &:nth-of-type(2){
                        border:1px solid #c4c4c4;
                    }
                    a{
                        display: block;
                        color: #000;
                    }
                }
            }
            .xinxi{
                font-size: 13px;
                text-align: center;
                padding:15px 0;
                p{
                    margin: 0;
                    color:#747474;
                    a{
                         display: inline-block;
                         &:nth-of-type(1){
                             color: red;
                         }
                         &:nth-of-type(2){
                             color: #000;
                         }
                    }
                }
            }
        }

    // 底部固定导航栏
    .footer-bar{
        position: fixed;
        display: block;
        bottom: 0;
        height: 60px;
        width:100%;
        background-color: #faf8f5;
        z-index: 3;
        padding-left: 100px;
        .closefix{
            box-sizing: border-box;
            position:absolute;
            left: 0;
            display: block;
            background-image: url('https://img.alicdn.com/imgextra/i3/379516416/TB2U68FkXXXXXXBXFXXXXXXXXXX_!!379516416.png');
            background-size: 21px;
            width: 45px;
            height: 60px;
            background-origin: content-box;//设置背景图片裁切的原点
            background-clip: content-box;//设置裁切的显示
            padding:19px 12px;
        }
        i{
            position: absolute;
            left: 45px;
            top:10px;
            background-image: url('http://m.manmanbuy.com/download/images/logo.png');
            background-size: 41px;
            width: 41px;
            height: 41px;
        }
        p{
            margin:0;
            color: #888895;
        }
        .buy{
            margin-top:10px;
            font-size: 18px;
        }
        .check{
            font-size: 12px;
        }
        .openfix{
            position:absolute;
            right: 10px;
            top:14px;
            width: 72px;
            height: 31px;
            text-align: center;
            line-height: 31px;
            background-color: #ff7700;
            border-radius: 5px;
            color: #fff;
        }
    }
}