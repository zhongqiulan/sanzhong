img {
  width: 100%;
}
a {
  display: block;
}
a:hover,
a:focus {
  text-decoration: none;
}
.details .list_nav {
  line-height: 40px;
  height: 40px;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding: 0 10px;
  background: -ms-linear-gradient(top, #ededed, #d6d6d6);
  /* IE 10 */
  background: -moz-linear-gradient(top, #ededed, #d6d6d6);
  /*火狐*/
  /*谷歌*/
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ededed), to(#d6d6d6));
  /* Safari 4-5, Chrome 1-9*/
  background: -webkit-linear-gradient(top, #ededed, #d6d6d6);
  /*Safari5.1 Chrome 10+*/
  background: -o-linear-gradient(top, #ededed, #d6d6d6);
  /*Opera 11.10+*/
}
.details .list_nav .navleft a {
  color: #000;
  display: inline-block;
}
.details .list_nav .navright button {
  width: 60px;
  height: 30px;
  line-height: 30px;
  margin: 0;
  padding: 0;
  margin-top: 4px;
}
.details .picture_info {
  border-bottom: 1px solid #ccc;
  background: #fff;
}
.details .picture_info .pic {
  padding: 20px 0;
  text-align: center;
}
.details .picture_info .pic img {
  width: 160px;
}
.details .picture_info h3 {
  margin: 0;
  font-size: 16px;
  padding-left: 10px;
  color: #333;
}
.details .picture_info .tableB {
  padding: 20px 10px;
}
.details .comment {
  background: #f2f2f2;
  overflow: hidden;
}
.details .comment .title {
  margin: 20px 0;
}
.details .comment .title > .nav {
  padding-right: 0px;
  height: 47px;
  font-size: 18px;
  border-top: 1px solid #c65f1a;
  border-bottom: 1px solid #c65f1a;
}
.details .comment .title > .nav > li {
  text-align: center;
  padding: 0;
  background: -ms-linear-gradient(top, #ffce4a, #ffbc03);
  /* IE 10 */
  background: -moz-linear-gradient(top, #ffce4a, #ffbc03);
  /*火狐*/
  /*谷歌*/
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ffce4a), to(#ffbc03));
  /* Safari 4-5, Chrome 1-9*/
  background: -webkit-linear-gradient(top, #ffce4a, #ffbc03);
  /*Safari5.1 Chrome 10+*/
  background: -o-linear-gradient(top, #ffce4a, #ffbc03);
  /*Opera 11.10+*/
}
.details .comment .title > .nav > li a {
  color: #fff;
  background: none;
  border: none;
}
.details .comment .title > .nav li.active {
  background: -ms-linear-gradient(top, #ffa52f, #ff9001);
  /* IE 10 */
  background: -moz-linear-gradient(top, #ffa52f, #ff9001);
  /*火狐*/
  /*谷歌*/
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ffa52f), to(#ff9001));
  /* Safari 4-5, Chrome 1-9*/
  background: -webkit-linear-gradient(top, #ffa52f, #ff9001);
  /*Safari5.1 Chrome 10+*/
  background: -o-linear-gradient(top, #ffa52f, #ff9001);
  /*Opera 11.10+*/
}
.details .comment .title > .nav li + li {
  border-left: 1px solid #c65f1a;
}
.details .comment .title .tab-content div .nav {
  padding-right: 0px;
  height: 43px;
  font-size: 18px;
  border-top: 1px solid #c65f1a;
  border-bottom: 1px solid #dddddd;
}
.details .comment .title .tab-content div .nav li {
  text-align: center;
  padding: 0;
}
.details .comment .title .tab-content div .nav li a {
  color: #333;
  font-size: 14px;
  background: none;
  border: none;
}
.details .comment .title .tab-content div .nav li.active {
  border-bottom: 1px solid #ff7700;
}
.details .comment .comment_detail {
  padding: 10px 10px 15px;
}
.details .comment .comment_detail .username {
  color: #9b9da0;
}
.details .comment .comment_detail .username .pull-left {
  font-size: 16px;
}
.details .comment .comment_detail .username .pull-right {
  font-size: 12px;
}
.details .comment .comment_detail .buy {
  color: #ff9000;
  font-size: 16px;
}
.details .comment .comment_detail .buy .pull-right {
  font-size: 12px;
  color: #9b9da0;
}
.details .comment .comment_detail .comment_details {
  padding: 10px 0;
}
.details .comment .comment_detail .huifu {
  color: #9b9da0;
  font-size: 12px;
}
.details .comment .fenye button {
  padding: 0;
  width: 80px;
  height: 35px;
  border-radius: 4px;
  border: 1px solid #ccc;
  box-shadow: 0 1px 1px #bbb;
  background: -ms-linear-gradient(top, #ededed, #d6d6d6);
  /* IE 10 */
  background: -moz-linear-gradient(top, #ededed, #d6d6d6);
  /*火狐*/
  /*谷歌*/
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ededed), to(#d6d6d6));
  /* Safari 4-5, Chrome 1-9*/
  background: -webkit-linear-gradient(top, #ededed, #d6d6d6);
  /*Safari5.1 Chrome 10+*/
  background: -o-linear-gradient(top, #ededed, #d6d6d6);
  /*Opera 11.10+*/
}
.details .comment .fenye .center select {
  width: 80px;
  height: 35px;
  text-align: center;
  font-size: 14px;
}
