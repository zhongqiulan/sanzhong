/*头部*/
.head{
    width: 100%;
    height: 50px;
    background-color: #ff841d;
    position: relative;
}
.head .back>a>span{
    font-size: 20px;
    position: absolute;
    left: 10px;
    line-height: 50px;
    color: #fff;
}
.head h2{
    float: left;
    font-size: 20px;
    line-height: 50px;
    font-weight: bold;
    color: #fff;
    position: absolute;
    left: 40%;
}
.app-donwload img {
    width: 34px;
    height: 34px;
    margin-top: 8px;
    position: absolute;
    right: 10px;
}

/*主体内容*/
.goods .goods_title {
    font-size: 18px;
    margin: 10px auto 5px auto;
    font-weight: 800;
    text-align: left;
    text-align-last: left;
    word-break: break-all;
    color: #5a5a5a;
    line-height: normal;
}
.goods h4{
    color: #ff6c00;
    display: block;
    font-size: 15px;
}
.goods .info {
    margin: 12px auto;
    color: #999999;
    font-size: 12px;
}
.goods .min{
    width: 120px;
    float: right;
    margin: 12px auto auto 10px;
    overflow: hidden;
}
.goods .conn {
    font-size: 16px;
    word-break: break-all;
    line-height: 24px;
    color: #606060;
    padding-bottom: 20px;
}


















/*前往购买*/
.golink a {
    height: 40px;
    line-height: 40px;
    display: block;
    margin: 20px 10px;
    background: #FF9000;
    height: 30px;
    border-radius: 4px;
    line-height: 30px;
    text-align: center;
    font-size: 14px;
    color: #ffffff;
}
/*评论*/
.comment {
    background-color: #ffffff;
}
.comment .tit {
    font-size: 16px;
    padding: 6px 8px;
}
.comment .reply {
    padding: 6px 8px;
}
.comment .reply .form {
    border: 2px solid #ECEAE8;
    border-radius: 2px;
    padding: 4px 0 0 4px;
    background-color: #fff;
    position: relative;
    width: 98%;
    margin: 0px auto;
}
.comment .reply .form textarea {
    width: 100%;
    resize: none;
    overflow-x: hidden;
    overflow-y: auto;
    border: none;
    line-height: 22px;
    font-size: 14px;
    outline: 0;
    color: #666;
    height: 68px;
}
button, input, textarea {
    border: 0;
    margin: 0;
    padding: 0;
    font-size: 1em;
    line-height: 1em;
    background-color: transparent;
}
.comment .reply .form .ctrl {
    background-color: #fbfbfb;
    height: 36px;
    margin-left: -4px;
    border-top: solid 1px #f2f2f2;
}
.comment .reply .form .ctrl{
    position: absolute;
    right: -2px;
    bottom: -2px;
    background: #ff841d;
    border: 2px solid #ff841d;
    border-left: none;
    border-top: none;
    padding: 0px;
    width: 100px;
    height: 39px;
    color: #fff;
    outline: 0;
    border-radius: 0 0 2px 0;
    font-size: 16px;
    -webkit-appearance: none;
}
.comment .tit {
    font-size: 16px;
    padding: 6px 8px;
}


/*底部*/
.footer_login {
    background: #efefef;
    border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4;
    height: 34px;
    line-height: 34px;
    margin-top: 25px;
    clear: both;
}
.footer_login a{
    box-sizing: border-box;
    float: left;
    font-size: 14px;
    border-right: 1px solid #c4c4c4;
    text-align: center;
    width: 30%;
}
.footer_login .back_top{
    width: 40%;
    border: 0;
}
.footer_login .back_top img{
    width: 15px;
    height: 15px;
}
.footer_end {
    background: #efefef;
    text-align: center;
    font-size: 12px;
    padding: 15px 0;
    color: #666;
}