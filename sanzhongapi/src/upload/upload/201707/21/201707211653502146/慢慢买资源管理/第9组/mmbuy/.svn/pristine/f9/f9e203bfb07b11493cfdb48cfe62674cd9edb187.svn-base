body{
    overflow-x: hidden;
}

.head {
    height: 44px;
    line-height: 44px;
    position: relative;
    background-color: #e4393c;
    margin: 0;
    a {
        display: block;
        width: 50px;
        height: 44px;
        color: #fff;
        font-size: 20px;
        text-align: center;
        text-decoration: none;
    }
    .back {
        position: absolute;
        left: 0;
        top: 0;
    }
    h1 {
        width: 100%;
        margin: 0;
        color: #fff;
        font-size: 20px;
        font-weight: bold;
        text-align: center;
        line-height: 44px;
    }
    .home {
        position: absolute;
        right: 0;
        top: 0;
        img {
            width: 60%;
        }
    }
}

.nav-tabs {
    display: table;
    height: 36px;
    // overflow: hidden;
    // width: auto;
    // table-layout: fixed;
    // white-space: nowrap;
    width: 200%;
    li{
        // overflow: hidden;
        // clear: both;
        // display: inline-block;
        height: 38px;
        line-height: 36px;
        // float:left;
        width: 68px;
    }
}

.tab-content {
    .tab-pane {
        .bc_goods_list {
            list-style: none;
            padding: 0;
            margin-top: 10px;
            li {
                padding: 10px 5px;
                margin-bottom: 10px;
                border: 1px solid #ddd;
                width: 100%;
                position: relative;
                .img {
                    position: absolute;
                    left: 0;
                    top: 10px;
                    img {
                        height: 130px;
                        width: 130px;
                    }
                }
                .text {
                    width: 100%;
                    padding-left: 140px;
                    .i {
                        height: 70px;
                        .pr {
                            margin-top: 10px;
                            vertical-align: middle;
                            font-style: normal;
                            color: red;
                            font-size: 20px;
                            i {
                                font-style: normal;
                                font-size: 16px;
                                margin-right: 4px;
                            }
                            em {
                                font-size: 12px;
                            }
                            del {
                                color: #a8a8a8;
                                font-size: 12px;
                            }
                        }
                    }
                    .o {
                        height: 60px;
                        .b {
                            .q {
                                .togoquan {
                                    border: 1px dotted #e4393c;
                                    height: 26px;
                                    line-height: 26px;
                                    text-align: center;
                                    display: block;
                                    padding: 0px 5px;
                                    font-size: 12px;
                                    color: #e4393c;
                                }
                            }
                            .g {
                                .togobuy {
                                    display: block;
                                    width: 80px;
                                    height: 38px;
                                    color: #fff;
                                    background-color: #e4393c;
                                    padding: 0px 10px;
                                    text-align: center;
                                    line-height: 38px;
                                    border-radius: 4px;
                                }
                            }
                        }
                        .bar {
                            font-size: 12px;
                            color: #666;
                        }
                    }
                }
            }
        }
    }
}