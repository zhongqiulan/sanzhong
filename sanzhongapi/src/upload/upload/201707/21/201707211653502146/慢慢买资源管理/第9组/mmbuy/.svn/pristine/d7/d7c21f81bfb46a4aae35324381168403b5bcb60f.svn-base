* {
  padding: 0;
  margin: 0;
}
a {
  -webkit-tap-highlight-color: apprent;
  text-decoration: none;
}
@media (min-width: 1200px) {
  .center {
    width: 1000px;
    margin: 0 auto;
  }
}
.view2 .discount_head {
  width: 100%;
  background-color: #ff841d;
}
.view2 .discount_head .pull-left {
  font-size: 20px;
  line-height: 40px;
  color: white;
}
.view2 .discount_head .discount_title {
  line-height: 40px;
  height: 40px;
  display: inline-block;
  text-align: center;
  color: white;
  font-size: 24px;
  margin: 0 auto;
  width: 208px;
}
.view2 .discount_head .pull-right {
  line-height: 40px;
}
.view2 .discount_head .pull-right img {
  width: 28px;
  height: 28px;
}
.view2 .discount_body {
  margin-bottom: 20px;
}
.view2 .discount_body h3 {
  font-size: 16px;
  font-weight: bold;
}
.view2 .discount_body h4 {
  color: #ff6c00;
  font-size: 14px;
  font-weight: bold;
}
.view2 .discount_body .jd_mall,
.view2 .discount_body .jd_time,
.view2 .discount_body .jd_info {
  color: #999999;
}
.view2 .discount_body .jd_commits {
  color: #4682c5;
}
.view2 .discount_body .goods_pic {
  float: right;
}
.view2 .discount_body .this_type {
  margin-top: 10px;
  line-height: 24px;
  font-size: 16px;
  color: #606060;
}
.view2 .discount_body .current_price {
  margin-top: 10px;
  line-height: 24px;
  font-size: 16px;
  color: #606060;
}
.view2 .buy_btn {
  background-color: #ff9000;
  margin: 10px 20px;
  height: 40px;
  border-radius: 5px;
  text-align: center;
  line-height: 40px;
  color: white;
}
.view2 .put_comments .comments_title {
  height: 31px;
  line-height: 31px;
}
.view2 .put_comments .comments_area {
  width: 100%;
  height: 125px;
  border: 1px solid #eceae8;
  padding: 1px;
}
.view2 .put_comments .comments_area textarea {
  width: 100%;
  border: 1px solid #eceae8;
  height: 70px;
  border: none;
}
.view2 .put_comments .comments_area .input_c {
  border-top: 1px solid #f2f2f2;
  background-color: #fbfbfb;
  position: relative;
  height: 46px;
  width: 100%;
}
.view2 .put_comments .comments_area .input_c input {
  position: absolute;
  top: 0;
  right: 0;
  width: 100px;
  height: 44px;
  border: none;
  background-color: #ff841d;
  color: white;
}
.view2 .put_comments .comments_hot,
.view2 .put_comments .comments_new {
  margin-top: 10px;
  font-size: 16px;
}
.view2 .discount_footer {
  height: 53px;
  background-color: #f2f2f2;
  line-height: 53px;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 16px;
}
.view2 .to_count {
  border-bottom: 1px solid #cccccc;
  border-top: 1px solid #cccccc;
  background-color: #f5f5f5;
}
.view2 .to_count .to_count_word {
  height: 35px;
  line-height: 35px;
}
