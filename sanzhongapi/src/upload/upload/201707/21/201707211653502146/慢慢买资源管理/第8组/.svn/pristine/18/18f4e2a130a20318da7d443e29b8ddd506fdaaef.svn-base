/*头部*/
.head{
    width: 100%;
    height: 50px;
    background-color: #ff841d;
    position: relative;
}
.head .back>a>span{
    font-size: 20px;
    position: absolute;
    left: 10px;
    line-height: 50px;
    color: #fff;
}
.head h1{
    float: left;
    font-size: 20px;
    line-height: 50px;
    font-weight: bold;
    color: #fff;
    position: absolute;
    left: 30%;
}
.app-donwload img {
    width: 34px;
    height: 34px;
    margin-top: 8px;
    position: absolute;
    right: 10px;
}

/*主体内容*/
.main ul{
    background-color: #fff;
}
.main>ul>li{
    border-bottom: 1px solid #ccc;
    padding: 10px;
    position: relative;
}
.main>ul>li img{
    width: 100px;
    height: 100px;
    vertical-align: middle;
    float: left;
}
.main .info .title{
    color: #333333;
    word-break: break-all;
    font-size: 15px;
    line-height: 19px;
    min-height: 57px;
    text-align: left;
    font-weight: normal;
}
.main .title span{
    color:#F00;
}
.main .ather span{
    color: #a1a1a1;
}
.main .info .other .comment {
    display: inline-block;
    color: #a1a1a1;
    float: right;
}

table {
    width: 100%;
    text-align: center;
    margin-top: 20px;
}
table .previous,.next{
    box-sizing: border-box;
    background-color: #d4d4d4;
    background: -webkit-gradient(linear,0 0,0 100%,from(#f1f1f1),to(#d4d4d4));
    border-radius: 5px;
    text-align: center;
    font-size: 14px;
    line-height: 32px;
    overflow: hidden;
    padding: 8px 20px;
    margin-top: 30px;
}
table .selectPage{
    border: 1px solid #bababa;
    font-size: 16px;
    padding: 16px 15px;
    height: 32px
}

/*底部*/
.footer .nav{
    margin-top: 20px;
    height: 36px;
    background-color: #ebebeb;
    background: -webkit-gradient(linear,0 0,0 100%,from(#ffffff),to(#ebebeb));
    border-top: solid 1px #ebebeb;
    border-bottom: 1px solid #ccc;
    line-height: 36px;
    padding-left: 8px;
    font-size: 14px;
}
.footer_login {
    background: #efefef;
    border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4;
    height: 34px;
    line-height: 34px;
    margin-top: 25px;
    clear: both;
}
.footer_login a{
    box-sizing: border-box;
    float: left;
    font-size: 14px;
    border-right: 1px solid #c4c4c4;
    text-align: center;
    width: 30%;
}
.footer_login .back_top{
    width: 40%;
    border: 0;
}
.footer_login .back_top img{
    width: 15px;
    height: 15px;
}
.footer_end {
    background: #efefef;
    text-align: center;
    font-size: 12px;
    padding: 15px 0;
    color: #666;
}










