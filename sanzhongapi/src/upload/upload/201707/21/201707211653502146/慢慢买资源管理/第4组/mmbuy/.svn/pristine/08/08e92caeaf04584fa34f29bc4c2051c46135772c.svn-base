@charset "utf-8";
/* CSS Document */
html,
body,
ul,
li,
ol,
dl,
dd,
dt,
p,
h1,
h2,
h3,
h4,
h5,
h6,
form,
header,
main,
footer,
div,
fieldset,
legend,
img {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
a {
  text-decoration: none;
  color: inherit;
  display: block;
  box-sizing: border-box;
}
input {
  outline: none;
  border: none;
  display: block;
  width: 100%;
  height: 100%;
}
ul {
  list-style: none;
}
img {
  display: block;
  width: 100%;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.clearfix {
  zoom: 1;
}
textarea {
  width: 95%;
}
a {
  color: #000;
  text-decoration: none !important;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
em,
i {
  font-style: normal;
}
.left-menu > .list-group > li > a {
  display: block;
}
.left-menu > .list-group > li > a > img {
  width: 100%;
}
.layout {
  position: relative;
  height: 100%;
  transition: all .5s;
}
.layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
}
.layout > .header {
  position: relative;
  text-align: center;
  background-color: #f5f5f5;
}
.layout > .header > h4,
.layout > .header > h3 {
  width: 100%;
  margin: 0;
  height: 40px;
  line-height: 40px;
}
.layout > .header > .icon-menu {
  position: absolute;
  left: 10px;
  top: 10px;
  font-size: 20px;
}
.layout > .header > .icon-search {
  position: absolute;
  right: 10px;
  top: 10px;
  font-size: 20px;
}
.layout > .header > a > .icon-back {
  position: absolute;
  left: 10px;
  top: 10px;
  font-size: 20px;
}
.left-menu {
  width: 200px;
  height: 100%;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  transform: translateX(-200px);
  transition: all .5s;
}
.left-menu > .list-group > li > a > img {
  width: 100%;
}
.mmb-coupon {
  position: relative;
  /********************************优惠券列表头部********************************/
  /********************************优惠券列表内容********************************/
  /********************************遮罩层********************************/
}
.mmb-coupon .coupon-head {
  width: 100%;
  height: 44px;
  background-color: #f4483e;
  text-align: center;
  color: #fff;
  position: relative;
}
.mmb-coupon .coupon-head .head-back {
  font-size: 18px;
  position: absolute;
  left: 10px;
  top: 12px;
}
.mmb-coupon .coupon-head h4 {
  font-size: 20px;
  height: 100%;
  line-height: 44px;
  font-weight: bold;
}
.mmb-coupon .coupon-head .head-app {
  background: url(../../imgs/header_app.png) no-repeat;
  background-size: 34px 34px;
  position: absolute;
  width: 34px;
  height: 34px;
  right: 20px;
  top: 5px;
}
.mmb-coupon .couponList-content .coupon-tips {
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #999;
  font-size: 12px;
}
.mmb-coupon .couponList-content .content-info {
  padding: 10px 20px;
  margin: 0;
  border-bottom: 1px solid #ccc;
  position: relative;
}
.mmb-coupon .couponList-content .content-info .media-left a img {
  width: 100px;
}
.mmb-coupon .couponList-content .content-info .media-body h4 {
  font-size: 14px;
  line-height: 20px;
  margin-bottom: 0;
}
.mmb-coupon .couponList-content .content-info .media-body .money {
  font-weight: bold;
  color: #5a5a5a;
}
.mmb-coupon .couponList-content .content-info .media-body .time {
  font-size: 12px;
  color: #EE7700;
  padding-top: 12px;
  padding-bottom: 5px;
}
.mmb-coupon .couponList-content .content-info span {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  font-size: 26px;
  color: #ccc;
}
.mmb-coupon .couponList-content .coupon-carousel {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: none;
  z-index: 3;
}
.mmb-coupon .couponList-content .coupon-carousel .item img {
  width: 200px;
}
.mmb-coupon .coupon-mask {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 0;
  display: none;
}
