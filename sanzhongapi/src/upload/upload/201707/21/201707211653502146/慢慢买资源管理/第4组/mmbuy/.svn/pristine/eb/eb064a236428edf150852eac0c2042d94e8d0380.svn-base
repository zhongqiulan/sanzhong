@charset "utf-8";
/* CSS Document */
html, body, ul, li, ol, dl, dd, dt, p, h1, h2, h3, h4, h5, h6, form, header,
main,
footer,
div,fieldset, legend, img {
    margin:0;
    padding:0;
    box-sizing:border-box;
}
a{
    text-decoration: none;
    color:inherit;
    display:block;
    box-sizing:border-box;
}
input{
    outline: none;
    border: none;
    display: block;
    width:100%;
    height: 100%;
}
ul {
    list-style: none;
}
img{
    display: block;
    width:100%;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.clearfix {
  zoom: 1;
}
textarea {
  width: 95%;
}
a {
  color: #000;
  text-decoration: none !important;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
em,
i {
  font-style: normal;
}
.left-menu > .list-group > li > a {
  display: block;
}
.left-menu > .list-group > li > a > img {
  width: 100%;
}
.layout {
  position: relative;
  height: 100%;
  transition: all .5s;
}
.layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
}
.layout > .header {
  position: relative;
  text-align: center;
  background-color: #f5f5f5;
}
.layout > .header > h4,
.layout > .header > h3 {
  width: 100%;
  margin: 0;
  height: 40px;
  line-height: 40px;
}
.layout > .header > .icon-menu {
  position: absolute;
  left: 10px;
  top: 10px;
  font-size: 20px;
}
.layout > .header > .icon-search {
  position: absolute;
  right: 10px;
  top: 10px;
  font-size: 20px;
}
.layout > .header > a > .icon-back {
  position: absolute;
  left: 10px;
  top: 10px;
  font-size: 20px;
}
.left-menu {
  width: 200px;
  height: 100%;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  transform: translateX(-200px);
  transition: all .5s;
}
.left-menu > .list-group > li > a > img {
  width: 100%;
}
