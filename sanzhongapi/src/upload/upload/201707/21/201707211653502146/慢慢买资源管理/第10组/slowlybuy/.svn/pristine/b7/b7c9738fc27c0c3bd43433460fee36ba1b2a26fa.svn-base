
.container-fluid{
    padding:0;
    //头部
     .ht-header{
        width:100%;
        padding:0 50px;
        height:44px;
        line-height:44px;
        text-align: center;
        color:#fff;
        background-color: #ff841d;
        position: relative;
        .back{
            display: block;
            width:50px;
            height:44px;
            position: absolute;
            left:0;
            top:0;
            i{
            color:#fff;
            width:100%;
            height:100%;
            }
        }
        h2{
             width:100%;
              height:44px;
              line-height: 44px;
              padding:0;
              margin:0;
             font-size: 20px;
             font-weight: bold;
        }
        .app{
            display: block;
            width:50px;
            height:44px;
            margin-top:5px;
            background-image: url('../images/header_app.png');
           background-size: 34px;
           background-repeat: no-repeat;
           position:absolute;
           right:0;
           top:0;
        }
    }

    //内容区
    .ht-content{
        .media{ 
            padding:14px 8px;
            .media-left{
               a{
                   img{
                        width:100px;
                        height:100px;
                   }
               }
            }
            .media-body{
                  position: relative;
                h4{
                    font-size: 15px;
                    span{
                        color:#ff6c00;
                    }
                }
            }
            .mall{
                position: absolute;
                bottom:0;
                left:0;
                color:#a1a1a1;
            }
            .comment{
                position: absolute;
                bottom:0;
                right:0;
                color:#a1a1a1;
                .glyphicon{
                    margin-right:5px;
                }
            }            
        }
    }

    
    // 下下翻页
    .ht-page{
        background-color: #f2f2f2;
        padding:20px 0 20px 0;
        margin-top:10px;
        nav{
            ul{
                margin:0;
                li{
                    a{
                        border-radius:0;
                        background-color: #e6e6e6;
                        color:#000;
                        box-shadow: 0 0 1px #666;
                        //  margin-left:20px;
                    }
                    .prev_a{
                        margin-left:30px;
                    }
                    .next_a{
                        margin-right:30px;
                    }
                }
                
                select{
                    width:130px;
                    color:#000;
                    border:1px solid #ccc;
                    border-radius: 0;
                }
            }
        }
    }


    //跳转页面
    .ht-jump{
        height:36px;
        line-height: 36px;
        background-color: #ebebeb;
        padding-left:5px;
        a{
            color:#000;
        }
    }


    //底部
    .footer{
        background-color: #f2f2f2;
        .footer-top{  padding-top:25px;
            .footer-nav{
                height:34px;
                line-height: 34px;
                text-align: center;
                border:1px solid #ccc;
                a{
                     color:#000;
                     img{
                         height:15px;
                         vertical-align: baseline;
                     }
                }
            }
        }
        .footer-botton{
           text-align: center;
           padding:20px 0;
           p{
               margin:0;
               .phone-app{
                   color:red;
               }
                .m-com,.manman{
                    color:#000;
                }
           }
        }
    }

    //固定
    .footer-app{
        position: fixed;
        bottom:30px;
        right:0;
        z-index: 999;
        a{
            img{
                width:60px;
            }
        }
    }


}