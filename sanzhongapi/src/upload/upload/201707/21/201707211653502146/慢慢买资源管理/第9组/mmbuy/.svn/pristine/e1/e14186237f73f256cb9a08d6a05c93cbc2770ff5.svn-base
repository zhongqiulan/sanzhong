//主体
#content{
  .info_top{
    ul{
      // background-color: #ebebeb;
         background-color: #ccc;
         width: 100%;
         height: 30px;
         line-height: 30px;
      li{
        float: left;
        margin-left: 5px;
        font-size: 14px;
      }
    }
  }
  .info_img{
    display: block;
    text-align: center;
  }
  .info_main{
    padding:35px 0px 10px 10px;
    font-size: 18px;
  }
  .info_price{
    padding:5px 150px 20px 10px;
    font-size: 13px;
    color: #ccc;
    .left{
      float: left;
    }
    .right{
      float: right;
    }
  }

  // .there_color{
    
  // }

  .three_list{
    border-top: 20px solid #f2f2f2;
    ul{
      li{
        border: 1px solid #000;
         width: 33.3%;
        a{
          background-color: #ff950a;
          color:#fff;
          border: none;
          margin: 0;   
        }
        //& li中b_line相当于跟li同级别
         &.b_line{
          border-left: none;
          border-right: none;
        }
      }
    }
    .tab-content{
      padding:15px 10px 50px 10px;
      border-bottom: 1px solid #ccc; 
      .left{
        float: left;
        img{
          width: 5%;
        }

      }
      .right{
        float: right;
        .price{
          color: red;
        }
      }
    }

    //评论
    #list_comment{
      .comment{
      border-top: 10px solid #7a7a7a;
      background-color: #dbdbdb;
      font-size: 15px;
      text-align: center;
      padding: 10px 10px;
    }
      .info_top{
        
        .user{
          margin-left: 5px;
          float: left;
        }
        .time{
          float: right;
        }
      }
      .info{
        padding-top: 50px;
        font-size: 16px;
        p{
          margin-top: 5px;
        }
      }
      .more{
         padding-left: 20px;
        button{
           padding: 10px 200px 10px 200px;

        }
      }

    }
  
  }

}