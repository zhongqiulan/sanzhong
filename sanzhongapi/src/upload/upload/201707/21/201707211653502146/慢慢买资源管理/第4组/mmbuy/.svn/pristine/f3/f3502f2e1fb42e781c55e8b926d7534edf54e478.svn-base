*{
    font-size:14px;
    text-align: center;
}
.hide{
    display: none;
}
.show{
    display: block;
}
.layout{
    width:100%;
    .bcj_head{
        position: relative;        
        width:100%;
        height:36px;
        line-height: 36px;
        .bcj_ul{
            overflow:hidden;
            width:100%;
            padding-right:38px;
            ul{                
                li{
                    float:left;
                    margin:0 12px;
                }
            }
        }
        .searchBtn{
            position: absolute;
            height:38px;
            width:38px;
            right:0;
            top:0;
            border-left: 1px solid #e6e6e6;
            background-color: #fbfbfb;            
            .icon-search{
                font-size:22px;
                line-height: 38px;
            }
        }
        .searchBox{
            
        }
    }
        .nav_discount{
            width:100%;
            background-color: #fbfbfb;   
            img{
                width:100%;
                margin:10px 0
            }
        }
}