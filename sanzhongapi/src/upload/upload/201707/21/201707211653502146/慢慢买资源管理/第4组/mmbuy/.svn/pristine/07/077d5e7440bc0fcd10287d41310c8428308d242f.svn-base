.layout {
    #discount {
        border-top: 1px solid #e0e0e0;
        margin-top: 10px;
        >.media {
            >a {
                display: block;
                position: absolute;
                top: 0px;
                left: 0px;
                width: 100%;
                height: 100%;
            }
            padding: 5px;
            border-bottom: 1px solid #e0e0e0;
            margin-top: 0;
            position: relative;
            >.media-left {
                >.rank {
                    display: block;
                    width: 40px;
                    height: 20px;
                    line-height: 20px;
                    position: absolute;
                    top: 0px;
                    left: 0px;
                    color: #ffffff;
                    background-color: rgba(255, 119, 0, .7);
                    text-align: center;
                    font-size: 11px;
                    font-style: normal;
                }
                img {
                    width: 140px;
                    overflow: hidden;
                }
            }
            >.media-body {
                >h5 {
                    color: #333333;
                    margin-top: -3px;
                    margin-bottom: 5px;
                    font-size: 15px;
                    overflow: hidden;
                    line-height: 28px;
                    max-height: 56px;
                    text-align: left;
                    text-align-last: left;
                    -webkit-line-clamp: 2;
                    display: -webkit-box;
                    -webkit-box-orient: vertical;
                }
                >p {
                    color: #f40;
                    margin-top: 2px;
                    font-size: 16px;
                    line-height: 28px;
                    height: 28px;
                    overflow: hidden;
                    -webkit-line-clamp: 1;
                    display: -webkit-box;
                    -webkit-box-orient: vertical;
                }
                .dress {
                    position: absolute;
                    bottom: -12px;
                    color: #ccc;
                    font-size: 12px;
                }
            }
        }
    }
    .pagenavi {
        height: 44px;
        padding: 0px 20%;
        box-sizing: border-box;
        position: fixed;
        bottom: 0px;
        left: 0px;
        right: 0px;
        background-color: #fff;
        border-top: 1px solid #ccc;
        a.prev,
        a.next {
            display: block;
            float: left;
            width: 50%;
            line-height: 44px;
            color: #ff7700;
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            box-sizing: border-box;
        }
        a.disabled {
            color: #999999;
        }
    }
}