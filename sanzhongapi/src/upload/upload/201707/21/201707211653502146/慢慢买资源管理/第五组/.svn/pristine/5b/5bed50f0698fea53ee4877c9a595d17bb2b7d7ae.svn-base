 body{
    width: 100%;
    background-color:#f7f7f7;
    overflow-x: hidden;
 }

 .header-wrap{
     background-color:#f4483e;
     width: 100%;
     height: 0.8rem;
     position: fixed;
     z-index:999;

    header{
        display: flex;
        
        .back{
            a{
                display: flex;
                width: 0.8rem;
                height: 0.8rem;
                align-items: center;
                justify-content: center;
                color: #fff;

                i{
                    font-size: 0.4rem;
                }
            }
        }
        .h-title{
            flex:1;
            font-size:0.35rem;
            line-height: 0.8rem;
            color: #fff;
            text-align: center;
        }
        .app-download{
            span{
                display: block;
                height: 0.8rem;
                width: 0.6rem;
                background:url('../images/header_app.png') no-repeat center center;
                background-size:0.6rem;
            }
            padding-right:0.1rem;
        }
    }
 }

.navs{
    padding-top:0.8rem;
    background-color:#fff;
    ul{
        li{
            float: left;
            padding: 0.2rem 0;
            margin:0 0.2rem;
            a{
                font-size: 0.25rem;
                color: #000;
            }
        }
        li.active{
            color: #f4483e;
            border-bottom: 2px solid #f4483e
        }
    }
}

.list-wrap{

    .list{
        li{
            height: 2.3rem;
            margin-top:0.1rem;
            padding:0.1rem;
            background-color: #fff;
            display: flex;

            .img-wrap{
                width: 2.3rem;
                height: 2.3rem;
                img{
                    width: 100%;
                }
            }

            .content-wrap{
                flex:1;
                margin-left: 0.1rem;
                font-size: 0.25rem;
                h4{
                    font-size: 0.28rem;
                    height: 0.60rem;
                }

                .money{
                    color: red;
                    font-size:0.4rem;
                    margin-top:0.1rem;

                    em{
                        font-size:0.2rem;
                        margin: 0 0.1rem;
                        vertical-align: middle;
                    }
                    i{
                        font-size:0.3rem;
                    }
                    del{    
                        font-size:0.2rem;
                        color: #333;
                        margin-left: 0.2rem;
                        vertical-align: middle;
                    }
                }

                .progress{
                    margin-top:0.1rem;

                    i{
                        display: inline-block;
                        width: 1.8rem;
                        height: 0.26rem;
                        background-color:#ffb7b7;
                        border:1px solid #fc353a;
                        border-radius:12px;
                        text-align: center;
                        color: #fff;
                        line-height: 0.26rem;
                    }

                    b{
                        margin-left: 0.1rem;
                        color: red;
                        font-size:0.2rem;
                        line-height: 0.26rem;
                    }
                }

                .bottom{
                    margin-top:0.2rem;
                    font-size:0.2rem;

                    .coupon{
                        float: left;
                        padding: 0.04rem;
                        color: #f4483e;
                        border:1px dashed #f4483e;
                        vertical-align: middle;
                    }
                    >a{
                        float:right;
                        color:#fff;
                        padding: 0.02rem 0.06rem;
                        background-color: #ff5e5d;
                        border-radius: 3px;
                        height: 0.4rem;
                        line-height: 0.4rem;
                    }
                }
            }
        }
    }
}

.b-tool{
    margin-top:0.2rem;
    background-color:#efefef;

    .top{
        font-size:0.28rem;

        ul{
            display: flex;
            align-items:center;
            text-align:center;

            li{
                flex-grow: 1;
                border:1px solid #e0e0e0;
                padding:0.1rem 0;
            }
            li.to-top{
                flex-grow:1.1;

                i.iconfont{
                    color: #666;
                    font-size:0.28rem;
                }
            }
        }
    }
    .bottom{
        font-size:0.22rem;
        padding:0.1rem 0 0.3rem;;

        p{
            text-align:center;
            
            a{
                display:inline;
            }
            >span:nth-of-type(1){
                color: red;
            }
            >span:nth-of-type(2){
                color: #666;
            }
        }
        >p:nth-of-type(2){
            color:#666;
        }
    }
}

.to-top-btn{
    display:none;
    a{
        width: 0.8rem;
        height: 0.8rem;
        border-radius: 50%;
        background-color: rgba(0,0,0,.5);
        position: fixed;
        bottom: 40px;
        right: 40px;
        
        color: #ccc;
        font-size:0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }
}