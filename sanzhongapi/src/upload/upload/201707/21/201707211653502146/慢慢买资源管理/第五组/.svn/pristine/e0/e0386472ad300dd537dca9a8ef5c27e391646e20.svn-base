.bottom {
    // padding: 0 15px;
}

.tit {
    padding: 0 10px;
    margin-top: 20px;
    font-size: 16px;
    h4 {}
}

.reply {
    padding: 0 10px;
    margin-top: 10px;
    box-sizing: border-box;
    .form {
        border: 2px solid #ECEAE8;
        border-radius: 5px;
    }
    .input_area {
        height: 68px;
        outline: none;
        resize: none;
        overflow-x: hidden;
        overflow-y: auto;
        border: none;
        color: #666;
        width: 100%;
    }
    .ctrl {
        width: 100%;
        height: 36px;
        background-color: #fbfbfb;
        border-top: 1px solid #f2f2f2;
        .tjdp {
            width: 100px;
            background-color: #ff841d;
            border: none;
            height: 100%;
            float: right;
            color: #fff;
            display: inline;
            font-size: 16px;
            margin-right: -2px;
        }
    }
}

// 最新评论
.newcomment_content {
    //   display: none;
    margin-top: 15px;
    color: #606060;
    >h3 {
        font-size: 18px;
        padding: 0 15px;
    }
    .media {
        // margin-top: 30px;
        padding: 0 15px 0px;
        border-bottom: 1px solid #ccc;
        .media-left {
            img.media-object {
                width: 40px;
                border-radius: 20px;
            }
        }
    }
    .media-body {
        .media-heading {
            display: inline-block;
            color: #5997c0;
            font-size: 13px;
        }
        .time {
            display: inline-block;
            float: right;
            color: #999999;
            font-size: 13px;
        }
        .user_comment {
            font-size: 15px;
            margin-top: 5px;
        }
    }
}
// loading部分
.loading {
    img {
        width: 32px;
        margin: 10px auto;
    }
}