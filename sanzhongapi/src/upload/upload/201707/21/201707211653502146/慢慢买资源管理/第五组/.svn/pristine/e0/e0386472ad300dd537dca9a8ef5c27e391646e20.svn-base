@import 'inlandiscount.less';
a:focus,
a:active {
  text-decoration: none;
  color: inherit;
  display: block;
  /* a标签点击高亮  */
}
.views {}

// 内容模块
.content {
    // position: relative;
    .description {
        // float: left;
        word-break: break-all;
        color: #5a5a5a;
        padding-left: 10px;
        .title {
            font-size: 18px;
            font-weight: 700;
        }
        >p {
            font-size: 16px;
            line-height: 24px;
            margin-top: 6px;
            margin-bottom: 6px;
        }
        .price {
            color: #ff6c00;
            font-weight: 700;
            font-size: 15px;
        }
        .subtitle {
            font-size: 12px;
            color: #999999;
        }
        .coupon {
            a {
                display: inline-block;
                color: #4682c5;
            }
        }
    }
    .pic {
        float: right;
        margin-top: 130px;
        overflow: hidden;
        >img {
            width: 120px;
        }
    }
}

// 前往购买
.btnBuy {
    margin-top: 50px;
    padding: 0 15px;
    a {
        background-color: #FF9000;
        color: #fff;
        padding: 10px 0;
        border-radius: 4px;
        text-align: center;
    }
}

