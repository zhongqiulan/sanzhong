@import '../base.less';

.views{
    header{
        width: 100%;
        height: 50px;
        background-color: #ff841d;
        .logo{
            padding:16px;
            img{
                max-height:25px;
            }
        }
        .app-download{
            padding:7px;
            img{
                max-height:34px;
            }
        }
    }
    .searchBox{
        width: 100%;
        height: 50px;
        padding:10px;
        position: relative;
        font-size: 16px;
        border-bottom: 1px solid #ccc;
        input{
            padding: 0;
            width: 90%;
            height: 30px;
            line-height: 30px;
            display: block;
            border: none;
            padding-left: 20px;
            border-radius:15px;
            background-color: #f1f1f1;
            position: absolute;

        }
        .search_btn{
            width: 66px;
            height: 30px;
            line-height: 30px;
            text-align: center;
            background-color: #ff841d;
            border-radius: 15px;
            color:#fff;
            border: none;
            position: absolute;
            top:10px;
            right: 10px;
        }
    }
    .menu{
        padding:6px 0;
        ul{
            margin:0;
            li{
                width: 25%;
                text-align: center;
                margin: 16px 0;
                // padding:0 30px;
                &.menu_hide{
                    display: none;
                }
                &.menu_show{
                    display: block;
                }
                a{
                    color: #5a5a5a;
                    img{
                        width: 50px;
                        margin-bottom: 6px;
                    }
                    p{
                        margin: 0;
                    }
                }
            }
        }
    }
    .tjzk{
        width: 100%;
        height: 40px;
        line-height: 40px;
        background-color: #ff9000;
        padding: 0 10px;
        position: relative;
        h3{
            color: #fff;
            font-size: 18px;
            line-height: 40px;
        }
        .tjzk_arrow{
            font-size: 24px;
            position: absolute;
            right: 8px;
            top: 7px;
            color:#fff;
        }
    }
    .tjzk_list{
        ul{
            li{
                width: 100%;
                padding: 14px 8px 14px 108px;
                position: relative;
                a{
                    img{
                        width: 100px;
                        position: absolute;
                        left: 8px;
                        top: 14px;
                    }
                    .tjzk_text{
                        height: 100px;
                        padding-left:10px;
                        color:#333;
                        font-size: 15px;
                        .title{
                            min-height: 57px;
                            span{
                                color:#ff6c00;
                            }
                        }
                        .other{
                            color:#a1a1a1;
                            font-size: 12px;
                            padding-top:10px;
                            // position: absolute;
                            // left: 10px;
                            // bottom: 16px;
                        }
                    }
                }
            }
        }
        .tjzk_more{
            height: 30px;
            line-height: 30px;
            margin:10px;
            a{
                font-size: 13px;
                background-image: linear-gradient(#ffffff, #f4f4f4);
                text-align: center;
                color: #5a5a5a;
                border: 1px solid #dddddd;
                border-radius: 4px;
            }
        }
    }
    .foot_bar{
        width: 100%;
        height: 34px;
        line-height: 34px;
        margin-top: 10px;
        text-align: center;
        ul{
            li{
                float: left;
                width: 33.33%;
                border-top: 1px solid #ccc;
                border-bottom: 1px solid #ccc;
                &+li{
                    border-left: 1px solid #ccc;
                }
                .icon-top{
                    font-size: 15px;
                }
            }
        }
    }
    footer{
        width: 100%;
        text-align: center;
        color:#5a5a5a;
        font-size: 12px;
        padding: 15px 0;
        .foot_top{
            a{
                display: inline-block;
            }
            a:nth-of-type(1){
                color:red;
            }
        }
    }
}