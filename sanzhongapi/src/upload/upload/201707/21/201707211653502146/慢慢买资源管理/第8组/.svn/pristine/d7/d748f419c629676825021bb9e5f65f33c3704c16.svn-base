/*优惠券页面样式*/

/*初始化*/
*{
    padding:0;
    margin:0;
}
ul {
    list-style: none;
}
body,a {
    color:#000;
}
.clearfix:after {
    content: "";
    clear:both;
    display: block;
    line-height: 0;
}

/*头部*/
#header .navbar {
    height: 40px;
    background-color: #f4483e;
    position: relative;
}
.navbar-header .glyphicon {
    font-size: 20px;
    color:#fff;
}
.header-text {
    font-size: 20px;
    font-weight: bold;
    color:#fff;
    position:absolute;
    left:50%;
    top:10px;
    margin-left:-30px ;
}
.app-donwload img {
    height:34px;
    margin-top: 8px;
}

/*优惠券标题*/
#coupon-title {
    width: 100%;
}
#coupon-title .row {
    margin:0;
}
#coupon-title .row .col-xs-6 {
    width:32%;
    margin-left: 4px;
    padding:0;
    text-align: center;
}
#coupon-title .row .thumbnail img {
    width:50%;
}
#coupon-title .row .thumbnail span{
    color:#000;
}

/*路劲导航*/
#coupon-nav {
    height:36px;
    background-color: #ebebeb;
    padding-left: 10px;
    line-height: 36px;
    font-size: 15px;
    border-top: 1px solid #ccc;
    border-tottom: 1px solid #ccc;
    margin-bottom: 25px;
}
#coupon-nav ul li {
    float:left;
}

/*-------底部----------*/
/*底部导航栏*/
#footer {
    width:100%;
    background-color: #efefef;
}
.footer-nav {
    height:36px;
    line-height: 36px;
}
.footer-nav a {
    display: block;
    float: left;
    width:33.33%;
    text-align: center;
    border:1px solid #ccc;
}
.footer-nav a span {
    color:#666;
}
/*底部连接工具区域*/
.footer-link {
    text-align: center;
    padding:25px 0 15px;
    color:#666;
    font-size: 12px;
}
.footer-link p {
    line-height: 0;
}
.footer-link p a.link-app {
    color:red;
}
