@import '../base.css';
.view main .title {
  border-top: 1px solid #ccc;
  position: relative;
}
.view main .title .left {
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
}
.view main .title .left a {
  height: 100%;
  display: inline-block;
  color: #000;
  text-decoration: none;
}
.view main .title .right {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translate(-50%, -50%);
  padding: 2px 4px;
  background-color: #ccc;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.view main .content {
  background-color: #fff;
  height: 100%;
}
.view main .content .media {
  position: relative;
  height: 120px;
  height: 100%;
  font-size: 16px;
  padding: 0 10px;
  margin-top: 0;
}
.view main .content .media > div img {
  width: 120px;
}
.view main .content .media .media-body {
  padding-top: 5px;
}
.view main .content .media .media-body div {
  overflow: hidden;
  line-height: 30px;
  margin: 0;
  height: 60px;
  color: #000;
}
.view main .content .media .media-body p {
  color: #f00;
}
.view main .content .media .media-body span {
  font-size: 12px;
  color: #ccc;
}
.view main .content .media .media-body span:nth-of-type(2) {
  float: right;
}
.view main .content .media > a {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.view .flip {
  height: 40px;
  width: 100%;
  padding: 6px 20px;
  position: relative;
}
.view .flip button {
  width: 60px;
  height: 26px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.view .flip select {
  width: 60px;
  height: 26px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding-left: 8px;
}
body,
a {
  font-family: "微软雅黑";
}
