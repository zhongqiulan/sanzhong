/*
    页面初始化
*/
* {
  margin: 0;
  padding: 0;
}
a {
  text-decoration: none;
}
ul {
  list-style: none;
}
.clearfloat:after {
  content: "";
  display: block;
  visibility: hidden;
  height: 0;
  line-height: 0;
  clear: both;
}
.clearfloat {
  zoom: 1;
}
img {
  width: 100%;
  display: block;
}
/* 头部模块*/
.headers {
  height: 50px;
  background: #ff841d;
  width: 100%;
  position: relative;
  padding-left: 8px;
  box-sizing: border-box;
}
.headers a {
  width: 40px;
  height: 40px;
  display: block;
  box-sizing: border-box;
  padding-left: 12px;
  padding-top: 5px;
  position: absolute;
  line-height: 40px;
}
.headers a + a {
  top: 0;
}
.headers .app {
  padding: 0;
  position: absolute;
  right: 8px;
  top: 0;
}
.headers #tit {
  color: #fff;
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  margin: 0;
}
/* 页面的头部*/
.headers {
  background: #f4483e;
}
.headers a {
  font-size: 35px;
  color: #fff;
  text-decoration: none;
  font-family: '宋体';
}
/* 页面的主体*/
.main .merchants {
  width: 25%;
  margin: 15px 0 ;
  float: left;
}
.main .merchants a {
  width: 100%;
  height: 93px;
  display: block;
  text-align: center;
  color: #a7a7a7;
}
.main .merchants a:after {
  color: #a7a7a7;
}
.main .merchants a:visited {
  color: #a7a7a7;
}
.main .merchants a img {
  width: 50px;
  height: 50px;
  margin: 0 auto;
}
/* 页面的底部*/
.login {
  padding-top: 10px;
}
.login .s1,
.login .s2,
.login .s3 {
  display: block;
  border: 1px solid #ccc;
  float: left;
  box-sizing: border-box;
  text-align: center;
  height: 34px;
  line-height: 34px;
  color: #747474;
}
.login .s1,
.login .s2 {
  width: 30%;
  border-left: none;
}
.login .s3 {
  width: 40%;
  border-left: none;
  border-right: none;
}
.p1 {
  margin-top: 10px;
  text-align: center;
  clear: both;
}
.p1 > .s4 {
  color: red;
}
.p2 {
  text-align: center;
  margin-bottom: 30px;
}
