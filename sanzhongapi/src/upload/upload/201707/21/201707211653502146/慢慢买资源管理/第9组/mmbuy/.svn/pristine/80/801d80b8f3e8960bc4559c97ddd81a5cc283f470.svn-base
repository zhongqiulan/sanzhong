/*公共样式*/
a {
  text-decoration: none;
  color: #000;
}
h3,
ul,
p {
  margin: 0;
  padding: 0;
}
ul,
ol {
  list-style: none;
}
em {
  font-style: normal;
}
.main {
  background-color: #f2f2f2;
}
.main .nav {
  width: 100%;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  padding-left: 8px;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ccc;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
}
.main .nav a {
  display: inline-block;
  color: #5a5a5a;
}
.main .model .model-title {
  color: #874604;
  border-top: 1px solid #c8c8c8;
  border-bottom: 1px solid #c8c8c8;
  padding-left: 10px;
}
.main .model .model-title h3 {
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  font-weight: bold;
}
.main .model .model-list li {
  border-bottom: 1px solid #e7e7e7;
  padding: 10px;
}
.main .model .model-list li a em {
  display: inline-block;
  width: 20px;
  height: 20px;
  text-align: center;
  background: #c9c9c9;
  color: #FFFFFF;
  line-height: 20px;
  vertical-align: top;
  margin: 0 10px 0 0;
  font-size: 14px;
}
.main .model .model-list li a em.top1 {
  background-color: #f10e0e;
}
.main .model .model-list li a em.top2 {
  background-color: #ff9314;
}
.main .model .model-list li a em.top3 {
  background-color: #8adf5b;
}
.main .model .model-list li a .inner {
  display: inline-block;
}
.main .model .model-list li a .inner .tit {
  color: #000;
}
.main .model .model-list li a .inner p {
  font-size: 12px;
  color: #999;
}
.main .product .product-title {
  color: #874604;
  border-top: 1px solid #c8c8c8;
  border-bottom: 1px solid #c8c8c8;
  padding-left: 10px;
}
.main .product .product-title h3 {
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  font-weight: bold;
}
.main .product .product-list li {
  border-bottom: 1px solid #e7e7e7;
  padding: 10px;
}
.main .product .product-list li .pic {
  float: left;
  margin-right: 10px;
  width: 100px;
  height: 100px;
}
.main .product .product-list li .info h4 {
  color: #333333;
  font-size: 14px;
  line-height: 22px;
  min-height: 44px;
}
.main .product .product-list li .info .price {
  height: 25px;
  margin-top: 4px;
}
.main .product .product-list li .info .price em {
  font-size: 18px;
  color: #ea3900;
  vertical-align: middle;
  float: left;
}
.main .product .product-list li .info .other {
  font-size: 12px;
  color: #999999;
}
.main .comment .comment-title {
  border-bottom: 1px solid #ccc;
}
.main .comment .comment-title h3 {
  line-height: 36px;
  font-size: 14px;
  padding-left: 10px;
}
.main .comment .comment-title h3 a {
  color: #874604;
}
.main .comment .comment-list {
  padding: 10px;
}
.main .comment .comment-list li a {
  margin-bottom: 10px;
}
.main .comment .comment-list li a img {
  vertical-align: top;
  width: 100px;
  height: 100px;
}
.main .comment .comment-list li .plbox {
  background-color: #f8f8f8;
  padding: 10px;
  border: 1px solid #e7e7e7;
  position: relative;
}
.main .comment .comment-list li .plbox a .username {
  font-size: 14px;
  color: #4f6900;
}
.main .comment .comment-list li .plbox a .con {
  color: #000000;
  margin-top: 10px;
  line-height: 22px;
  font-size: 15px;
}
.main .comment .comment-list li .plbox::before {
  content: '';
  width: 0;
  height: 0;
  position: absolute;
  left: 30px;
  top: -7px;
  border-bottom: 8px solid #f8f8f8;
  border-left: 7px solid transparent;
  border-right: 7px solid transparent;
}
