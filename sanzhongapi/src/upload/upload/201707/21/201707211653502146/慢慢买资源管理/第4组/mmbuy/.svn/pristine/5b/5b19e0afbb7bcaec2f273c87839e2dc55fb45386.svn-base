body {
  padding-bottom: 50px;
}
* {
  margin: 0;
  padding: 0;
}
.seach-history {
  width: 100%;
  height: 50px;
  background-color: #ff8b00;
}
.seach-history a {
  font-size: 30px;
  color: #fff;
  left: 10px;
  top: 10px;
}
.seach-history h1 {
  font-weight: normal;
  color: #ffffff;
  padding-top: 10px;
  font-size: 24px;
  position: absolute;
  top: -20px;
  left: 35%;
}
.item_link {
  padding: 10px;
}
.item_link .state {
  color: #ccc;
  border-bottom: 1px solid #ccc;
}
.btn {
  padding-top: 40px;
  padding-left: 20%;
}
.btn .seach-history-Price,
.btn .reset {
  padding: 10px 20px;
  border-radius: 20px;
  border: 1px solid #ccc;
  background-color: #fff;
}
.operation {
  padding: 10px;
}
.operation p {
  color: #b7b8b3;
  font-size: 12px;
}
.meddle {
  width: 100%;
  height: 350px;
}
.footer {
  background-color: #faf8f5;
  padding: 5px;
  position: relative;
  margin-top: 23px;
}
.footer i {
  font-size: 25px;
  color: #c8c8da;
  float: left;
  top: 25px;
}
.footer span {
  display: inline-block;
  width: 60px;
  height: 60px;
  text-align: center;
  border-radius: 5px;
  font-size: 40px;
  color: #fff;
  background-color: #fc5506;
  float: left;
  margin: 0 5px;
}
.footer .media-body {
  margin-right: 5px;
}
.footer a {
  display: inline-block;
  color: #fff;
  background-color: #ff7700;
  padding: 10px;
  border-radius: 5px;
  position: absolute;
  right: 5px;
  top: 30px;
}
