/*初始化*/

body,h1,p,h3,h2 {
  margin: 0;
  padding: 0;
}

ul, ol {
  list-style: none;/*去掉原样式中的小黑点*/
}

textarea {
  resize: none;  /*不可以随意拖动*/
}

img {
  border: 0;
  vertical-align: middle; /*  去掉图片底部默认的3像素空白缝隙*/
}


.clearfix:before, .clearfix:after {
  /*清除浮动，最好最标准的写法*/
  content: "";
  display: table;
}

.clearfix:after {
  clear: both;
}

.clearfix {
  *zoom: 1; /*IE/7/6*/  /*兼容IE6下的写法*/
}

input, img {
    vertical-align: middle;
}

/*初始化*/





/*头部*/
nav {
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: #f4483e;
  position: relative;
}
nav .glyphicon-menu-left {
  position: absolute;
  display: block;
  width: 44px;
  height: 44px;
  text-align: center;
  line-height: 44px;
  color: #fff;
  font-size: 22px;
}
nav ::before {
  display: block;
  width: 100%;
  height: 100%;
}
nav h1 {
  text-align: center;
  font-size: 22px;
  height: 44px;
  line-height: 44px;
  color: #fff;
  font-weight: 900;
}
nav img {
  position: absolute;
  top: 0;
  right: 0;
  width: 34px;
  height: 34px;
  margin-top: 6px;
  margin-right: 3px;
}

/*内容*/
.quan_box {
    width: 100%;
}

.quan_box ul {
    padding-left: 0px;
    margin: 0px 2px;
}

.quan_box ul li {
    width: 31%;
    height: 75px;
    float: left;
    text-align: center;
    padding:0 5px;
    border:1px solid #eee;
    margin:0 4px;
    overflow: hidden;
}

.quan_box ul li a{
    display: block;
    height: 100%;
    color: #5a5a5a;
    font-size: 12px;
    text-decoration:none;
    text-align: center;
    margin-top:5px;
}

.quan_box ul li a img {
    max-height: 50px;
    width: 50px;
   border:none;
}
    


