@import "base.less";
@media(min-width:1200px) {
    .center {
        width: 1000px;
        margin: 0 auto;
    }
}

// *************** 国内折扣控头部
.view2 {
    .discount_head {
        width: 100%;
        background-color: #ff841d;
        .pull-left {
            font-size: 20px;
            line-height: 40px;
            color: white;
        }
        .discount_title {
            line-height: 40px;
            height: 40px;
            display: inline-block;
            text-align: center;
            color: white;
            font-size: 24px;
            margin: 0 auto;
            width: 208px;
        }
        .pull-right {
            line-height: 40px;
            img {
                width: 28px;
                height: 28px;
            }
        }
    }
}

// ************折扣的文字
.view2 {
    .discount_body {
        margin-bottom: 20px;
        h3 {
            font-size: 16px;
            font-weight: bold;
        }
        h4 {
            color: #ff6c00;
            font-size: 14px;
            font-weight: bold;
        }
        .jd_mall,
        .jd_time,
        .jd_info {
            color: #999999;
        }
        .jd_commits {
            color: #4682c5;
        }
        .goods_pic {
            float: right;
            img {
                width: 120px;
                height: 120px;
            }
        }
        .this_type {
            margin-top: 10px;
            line-height: 24px;
            font-size: 16px;
            color: #606060;
        }
        .current_price {
            margin-top: 10px;
            line-height: 24px;
            font-size: 16px;
            color: #606060;
        }
        .discount_pic_top {
            text-align: center;
            img {
                width: 350px;
                height: 350px;
            }
        }
        .discount_pic_bot {
            text-align: center;
            img {
                width: 547px;
                height: 235px;
            }
        }
        .buy_btn {
            background-color: #ff9000;
            margin: 10px 20px;
            height: 40px;
            border-radius: 5px;
            text-align: center;
            line-height: 40px;
            color: white;
        }
    }
    .put_comments {
        .comments_title {
            height: 31px;
            line-height: 31px;
        }
        .comments_area {
            width: 100%;
            height: 125px;
            border: 1px solid #eceae8;
            padding: 1px;
            textarea {
                width: 100%;
                border: 1px solid #eceae8;
                height: 70px;
                border: none;
            }
            .input_c {
                border-top: 1px solid #f2f2f2;
                background-color: #fbfbfb;
                position: relative;
                height: 46px;
                width: 100%;
                input {
                    position: absolute;
                    top: 0;
                    right: 0;
                    width: 100px;
                    height: 44px;
                    border: none;
                    background-color: #ff841d;
                    color: white;
                }
            }
        }
        .comments_hot,
        .comments_new {
            margin-top: 10px;
            font-size: 16px;
        }
    }
}

