.tit {
    height: 31px;
    line-height: 31px;
}

.form {
    width: 100%;
    height: 125px;
    border: 1px solid #eceae8;
    padding: 1px;
    #ctl00_ContentBody_txt_nr {
        width: 100%;
        border: 1px solid #eceae8;
        height: 70px;
        border: none;
    }
    .ctrl {
        border-top: 1px solid #f2f2f2;
        background-color: #fbfbfb;
        position: relative;
        height: 46px;
        width: 100%;
        input {
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 44px;
            border: none;
            background-color: #ff841d;
            color: white;
        }
    }
}

.list {
    ul {
        li {
            position: relative;
            list-style: none;
            .userimg {
                img {
                    width: 40px;
                    height: 40px;
                }
            }
            .name {
                position: absolute;
                top: 0;
                left: 40px;
                width: 100%;
                .username {
                    position: absolute;
                    top: 0;
                    left: 0;
                    color: #5997c0;
                }
                .time {
                    position: absolute;
                    top: 0;
                    right: 0;
                }
            }
            .content {
                position: relative;
                top: -13px;
                left:40px;
                .yinyong{
                    border: 1px solid #eeeeee;
                    background-color: #fbfbfb;
                    margin: 1px;
                    margin-top: 5px;
                }
            }
        }
    }
}

// ********************底部***************
.view2 {
    .discount_footer {
        margin-top: 50px;
        height: 53px;
        background-color: #f2f2f2;
        line-height: 53px;
        text-align: center;
        font-family: "微软雅黑";
        font-size: 16px;
    }
    .to_count {
        border-bottom: 1px solid #cccccc;
        border-top: 1px solid #cccccc;
        background-color: #f5f5f5;
        .to_count_word {
            height: 35px;
            line-height: 35px;
        }
    }
    .to_top {
        background-color: #efefef;
        div {
            text-align: center;
            font-size: 16px;
            border-bottom: 1px solid #c4c4c4;
            a {
                color: black;
                height: 35px;
                line-height: 35px;
            }
        }
        div:nth-of-type(1) {
            border-right: 1px solid #c4c4c4;
        }
        div:nth-of-type(2) {
            border-right: 1px solid #c4c4c4;
        }
    }
}
.blank{
    height: 40px;
    width: 100%;
}
.back_buy{
    position: fixed;
    bottom: 0;
    z-index: 10;
    .commit_bot{
        height: 40px;
        text-align: center;
        line-height: 40px;
        font-size: 30px;
    }
    .back_go{
        height: 40px;
        line-height: 40px;
        text-align: center;
        background-color: #ff9000;
        color:white;
    } 
 }