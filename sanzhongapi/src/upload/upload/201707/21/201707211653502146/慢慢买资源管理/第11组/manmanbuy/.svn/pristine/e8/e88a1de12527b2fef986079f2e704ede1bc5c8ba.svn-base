@import "../base/base.less";
@color:#ff8b00;
ul{
    list-style: none;
}

html{
    background:#f2f2f2;
}
// 与上一个页面不容的是
.sitenav{
    header{
        h1{
            font-weight:700;
        }
    }
}
.sitenav{
    header{
        height:44px;
        background:@color;
        color:#fff;
        position:relative;
        h1{
            width:100%;
            font-size:20px;
            line-height: 44px;
            padding:0px 50px;
            margin-top:0;
            margin-bottom:0;
            text-align: center;
        }
        .arrow{
            position:absolute;
            left:0;
            font-size:18px;
            color:#fff;
            padding:13px;
        }
        .header_app{
            display: block;
            position:absolute;
            right:8px;
            top:5px;
            img{
                 width:34px;
            }
           
        }
    }

    .body{
        width:300px;
        margin:10px auto;
        font-size:0px;
        background: #fff;
        a{
            padding:10px 8px;
            background: #f4f4f4;
            margin-left:5px;
            margin-bottom:5px;
            border:1px solid #bfbfbf;
            color:#000;
            font-size:16px;
            img{
                display: inline-block;
                width:16px;
            }
        }
      
    }

    .menu{
        height:36px;
        background: -webkit-gradient(linear,0 0,0 100%,from(#ffffff),to(#ebebeb));
        border-bottom:1px solid #ccc;
        border-top:1px solid #ebebeb;
        line-height: 36px;
        padding-left:8px;
        margin-bottom:30px;
        a{
             color:#000;
        }
       
    }
    footer{
            background: #efefef;
            // margin-top:30px;
            .menu{
                ul{
                    padding:0;
                    margin:0;
                }
                li{
                    height: 35px;
                    line-height: 35px;
                    text-align: center;
                    border-bottom: 1px solid #c4c4c4;
                    border-top: 1px solid #c4c4c4;
                    float: left;
                    width: 33.3%;
                    &:nth-of-type(2){
                        border:1px solid #c4c4c4;
                    }
                    a{
                        display: block;
                        color: #000;
                    }
                    img{
                        width: 15px;
                        display: inline-block;
                        margin-bottom: 6px;
                        margin-right: 3px;
                    }
                }
            }
            .xinxi{
                font-size: 13px;
                text-align: center;
                padding:15px 0;
                p{
                    margin: 0;
                    color:#747474;
                    a{
                         &:nth-of-type(1){
                             color: red;
                         }
                         &:nth-of-type(2){
                             color: #000;
                         }
                    }
                }
            }
    }

    .app{
        position:fixed;
        width:60px;
        right:0;
        bottom:30px;
        z-index: 999;
    }
}