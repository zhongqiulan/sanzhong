// 头部 
header{
    width:100%;
    color:#fff;
    h1{
        width:100%;
        border-bottom:1px solid  #e6e6e6 ;
        background-color: #ff841d;
        height:50px;
        padding-top: 13px;
        position: relative;
        padding-left:25px;
        margin-top: 0;
        a{  
            display: block;
            height: 100%;
            width:100%;
            background:url('../../../../images/header_logo.png')  no-repeat 0  0  ;
            background-size: 185.5px ;
        }
        span{
            height: 34px;
            width:34px;
            position: absolute;
            background:url('../../../../images/header_app.png')  no-repeat 0  0  ;
             background-size: 34px ;
            top:10px;
            right:10px;
        }
    }

    .search{
        .input-group{
            width: 100%;
            padding: 10px;
            position: relative;
            background-color: #fff;
            input{
                border-radius: 50px;
                width: 94%;
                font-size: 16px;
                background-color: #f6f6f6;
                outline-color: none;
                border-color: none;
                 font-size: 14px;
                border: none;
                outline: none;
            }
            span{
                width: 63px;
                border-radius: 30px;
                position: absolute;
                top: 10px;
                right: 10px;
                z-index: 999;
                height: 34px;
                background-color: #ff841d;
                font-size: 16px;
                color: #fff;
                line-height: 19px;
            }
        }
    }
}


//主体部分
.main{
    background-color: #f2f2f2;
    .nav{
        height: 40px;
        line-height: 40px;
        padding-left:10px;
        border-top:2px solid  #ececec;
        border-bottom:1px solid  #ececec;
        background-color: #f4f4f4;
        a{
            font-size: 14px;
            font-family: "微软雅黑";
        }
        span{
            font-size: 12px;
        }
    }

    .detail-head{
        background-color: #fff;
        padding:15px 8px;
        .exple{
            height:180px;
            text-align: center;
            position:relative;
            padding-top:10px;
            a{
                position:absolute;
                background-color: #8bc900;
                border-radius: 50%;
                color:#fff;
                line-height: 40px;
                height:40px;
                width:40px;
                top:3px;
                right:10px;
            }
            img{
                height:160px;
                width:160px;
            }
        }
        .title{
            font-size: 16px;
            line-height: 24px;
            font-family: '微软雅黑';
            color:#000;
        }
        p{
            line-height: 30px;
            height: 30px;
            font-size: 14px;
        }
    }
    .comment{
      padding-left:0;
        h4{
            height: 35px;
            line-height: 35px;
            background-color: #dbdbdb;
            text-align: center;
            border-top: 2px solid #7a7a7a ;
            margin-top:5px;
            margin-bottom: 0;
        }
        .content{
            padding-left: 0;
            background-color: #fff;
            margin-bottom: 0;
            li{
                padding:6px  8px;
                border-bottom: 1px solid #ccc;   
                p{
                    line-height: 18px;
                    height:18px;
                    .time{
                        font-family: '华文琥珀';
                    }
                    span{
                         color:#999;
                    }
                }
                .shangcheng{
                    line-height: 18px;
                    height:18px;
                    .star{
                        span{
                            color:#ff9000;
                            font-size: 16px;
                        }
                        span+span{
                            margin:-2px;
                        }
                    }
                }
                .describe{
                    margin:5px  0 ;
                }
                a{
                    color:#999;
                }
            }
        }
    }

}
//底部
 .footer {
  background: #f2f2f2;
  overflow: hidden;
}
 .footer .more-info {
  padding: 8px;
  text-align: center;
  background: #fff;
  width: 96%;
  margin: 10px 10px;
  border-radius: 5px;
}
 .footer .more-info a {
  color: #000;
}
 .footer .brand-reco {
  height: 35px;
  background: #ff841d;
  padding: 0 10px;
}
 .footer .brand-reco h3 {
  float: left;
  padding: 0px;
  margin: 0px;
  line-height: 35px;
  font-size: 18px;
  font-weight: bold;
  color: #fff;
}
 .footer .brand-reco a {
  float: right;
  line-height: 35px;
}
 .footer .brand-reco a img {
  width: 20px;
}
 .footer .tool ul {
  list-style: none;
  margin: 10px 0px;
}
 .footer .tool ul li {
  width: 33.3%;
  float: left;
  text-align: center;
  border: 1px solid #ccc;
  padding: 8px;
}
 .footer .tool .mmurl {
  text-align: center;
}
 .footer .tool .mmurl span {
  color: red;
}