@import "../common/base.less";

/********************************优惠券列表头部********************************/

.mmb-coupon {
    .coupon-head {
        width: 100%;
        height: 44px;
        background-color: #f4483e;
        text-align: center;
        color: #fff;
        position: relative;
        .head-back {
            font-size: 18px;
            position: absolute;
            left: 10px;
            top: 12px;
        }
        h4 {
            font-size: 20px;
            height: 100%;
            line-height: 44px;
            font-weight: bold;
        }
        .head-app {
            background: url(../../imgs/header_app.png) no-repeat;
            background-size: 34px 34px;
            position: absolute;
            width: 34px;
            height: 34px;
            right: 20px;
            top: 5px;
        }
    }
}


/********************************优惠券列表内容********************************/

.couponList-content {
    .coupon-tips {
        height: 30px;
        line-height: 30px;
        text-align: center;
        color: #999;
        font-size: 12px;
    }
    .content-info {
        padding: 10px 20px;
        margin: 0;
        border-bottom: 1px solid #ccc;
        position: relative;
        .media-left {
            a {
                img {
                    width: 100px;
                }
            }
        }
        .media-body {
            h4 {
                font-size: 14px;
                line-height: 20px;
                margin-bottom: 0;
            }
            .money {
                font-weight: bold;
                color: #5a5a5a;
            }
            .time {
                font-size: 12px;
                color: #EE7700;
                padding-top: 12px;
                padding-bottom: 5px;
            }
        }
        span{
            position: absolute;
            top: 50%;
            right: 0;
            transform: translateY(-50%);
            font-size: 26px;
            color: #ccc;
        }
    }
}