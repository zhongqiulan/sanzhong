@import "base.less";

/*导航*/

.nav{
    width: 100%;
    height: 40px;
    background-color: #f1f1f1;
    ul{
        li{
            float:left;
            line-height: 40px;
            a{
                text-decoration: none;
                &:active{
                    color: inherit;
                }
            }
             
        }
    }
    button{
        float:right;
        margin-right:10px;
        padding-left:10px;
        padding-right:10px;
        border-radius: 5px;
        font-size: 13px;
        outline: none;
        border:none;
        border:1px solid #ccc;


    }
}



/*头部详细信息*/


.head_info{
    padding:10px 10px 0px 10px;
    background-color: #fff;
    margin-bottom:10px;
    .text_title{
        >h4{
            text-align: center;
        }
    }
     .picture{
         position: relative;

         >img{
             width: 160px;
             height: 160px;
             margin: 0 auto;
         }
         >a{
             position: absolute;
             right:20px;
             bottom:20px;
             >img{
                 width: 39px;
                 height: 39px;
             }
         }
     }
}

/*tab分割栏*/

.btnTab{
    .btn-group{
        width: 100%;
        .btn{
            width: 33.33%;
            border-color:#ccc;
            outline: none;
            background-color: #ffc31d;
            &:active{
                background-color: #ff9b1a;
            }
        }
    }
}

/*价格比较*/

.info_money{
    padding-top:10px;
    
    >ul{
        >li{
            margin-bottom:10px;
            a{
                text-decoration: none;
             
                .iconWeb{
                    float:left;
                    width:33.3%;
                    text-align: left;
                   img{
                       width: 20px;
                       display:inline-block;
                   }
                  
                }
                .info_price{
                    float: left;
                    width:66.7%;
                   text-align: right;
                   padding-right:15px;
                   .price{
                        color:red;
                   }
                   .btnMail{
                       padding-left:5px;
                       padding-right:5px;
                       border-radius: 5px;
                       outline: none;
                       border:none;
                       background-color:red;
                       color:#fff;
                   }

                }
            }
        }
    }

    >p{
        color:#ccc;
        font-size: 12px;
        border-top:1px solid #ccc;
        padding-top:10px;
        padding-left:5px;
    }
}


/*评价*/

.evaluation {
    width: 100%;
    height: 39px;
    text-align: center;
    background-color: #dbdbdb;
    line-height: 39px;
    font-size: 25px;
}

/*详细评论*/

.evaluation-info{
    padding:15px;
    .info_from{
        margin-bottom:20px;
        .top-info{
            span{
                display: block;
                width: 50%;
                float:left;
            }
          
            .right-date{
                text-align: right;
            }
        }
        .from-mall{
            display: block;
            text-align: right;
            
        }
    }
    .specific-evaluation{
        font-size: 15px;
    }
}

.btnInfo{
    .p_pic{
        width: 23px;
        height: 23px;
    }
}


