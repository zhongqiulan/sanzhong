a{
    text-decoration: none;
    color: #000;
}
.layout {
  position: relative;
  height: 100%;
}
.layout #header {
  height: 100%;
  text-align: center;
  position: relative;
  background-color: #ff841d;
  color: #fff;
}
.layout header .icon-back {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 20px;
}

.layout header .app-down {
  position: absolute;
  top: 5px;
  right: 10px;
  font-size: 20px;
   padding-bottom: 5px;
   height: 100%;
}
.layout header .app-down img{
    width: 34px;
    height: 34px;
}
.layout header h1 {
  margin: 0;
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 20px;
}
.serialList{
    margin-bottom: 0px;
}
.serialList .media{
   padding: 14px 8px;
   border-bottom: 1px solid #ccc;
}
.serialList .media .media-left>a>img{
   width: 100px;
   height: 100px;
}
.serialList .media .media-body{
    overflow: hidden;    
}
.serialList .media .media-body .media-heading{
    height: 57px;
    font-size: 15px;
    line-height: 19px;
} 
.serialList .media .media-body .media-heading span{
    color: #ff6c00;
    display: inline;
}
.serialList .media .media-body .media-footer{
   
    margin-top: 8px;
    color: #a1a1a1;
    font-size: 12px
}
.serialList .media .media-body .media-footer .comment{
     color: #a1a1a1;
    font-size: 12px;
}
.serialList .media .media-body .media-footer .comment i{
    display: inline-block;
    width: 14px;
    height: 15px;
    margin-right: 4px;
    vertical-align: middle;
    /*text-align: center;*/
}
.pages{
  margin-top: 20px;
  /*height: 100%;*/
  text-align: center;  
}
.pages nav{
 border-color: grey;
}
.pages .pager{
vertical-align: middle;

}
.pages .pager li {   
    vertical-align: inherit;
    padding: 8px 20px;
    border-color: grey;   
}
.pages .pager li a{
    box-sizing: border-box;
    background-color: #ebebeb;
    display: inline-block;
    border-radius: 8px;
    border: 1px solid #ddd;
    box-shadow: 0 0 1px #666;
    text-align: center;
    font-size: 14px;   
    overflow: hidden;  
}
.pages #selectPages{
    vertical-align: inherit;
    border: 1px solid #bababa;
    font-size: 16px;
    padding: 16px 15px;
    height: 32px;
    line-height: 33px;
    width: 130px;
    margin-top: 1px
}
.link{
    margin-top: 20px;
    height: 36px;
    background-color: #ebebeb;
    border-top: solid 1px #ebebeb;
    border-bottom: 1px solid #ccc;
    line-height: 36px;
    padding-left: 8px;
    font-size: 14px;
    color:#000;
}
.link a {
    color:#000;
}
.skip .top{
    margin-top: 25px;
   background: #efefef;
   border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4;
    height: 34px;
    line-height: 34px;
}
.skip .top a{
    display: inline-block;
    box-sizing: border-box;
    width: 30%;
    border-right: 1px solid #ccc;
    font-size: 14px;
    text-align: center;
}
.skip .top a:last-child{
    border-right:none; 
}
.skip .botton{
    padding: 15px 0;
    text-align: center;
    color: #666;
}