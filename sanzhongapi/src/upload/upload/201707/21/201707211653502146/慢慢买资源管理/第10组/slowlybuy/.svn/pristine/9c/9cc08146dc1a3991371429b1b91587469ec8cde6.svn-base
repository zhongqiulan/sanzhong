
.view{

    // 头部
    .htlist-header{
        width:100%;
        padding:0 50px;
        height:44px;
        line-height:44px;
        text-align: center;
        color:#fff;
        background-color: #ff841d;
        position: relative;
        .back{
            display: block;
            width:50px;
            height:44px;
            position: absolute;
            left:0;
            top:0;
            i{
            color:#fff;
            width:100%;
            height:100%;
            }
        }
        h2{
             width:100%;
              height:44px;
              line-height: 44px;
              padding:0;
              margin:0;
             font-size: 20px;
             font-weight: bold;
        }
        .app{
            display: block;
            width:50px;
            height:44px;
            margin-top:5px;
            background-image: url('../images/header_app.png');
           background-size: 34px;
           background-repeat: no-repeat;
           position:absolute;
           right:0;
           top:0;
        }
    }

    //详细信息页
    .list-content{
        // color:#fff;
        padding:0 10px;
         h3{
             font-weight: bold;  
         }
        h4{
            color:#ff6c00;
            font-weight: bold;
            margin:0;
        }
        .info{
            color:#999;
            padding:12px 0;
            span{
              margin-right:5px;
              font-size: 12px;
            }
        }
        .list-small{
            img{
                width:120px;
                height:120px;
            }
        }
        .conn{
            color:#606060;
            line-height: 24px;
            font-size: 16px;
        }
        .feedback{
            p{
                color:#606060;
                margin:0;
                font-size: 16px;
            }
            a{
                color:#000;
                font-size: 18px;
            }           
        }
        .list-big{
             text-align: center;
        }
        .shopping{
            display: block;
            height:40px;
            line-height: 40px;
            text-align: center;
            border-radius: 5px;
            width:100%;
            margin:30px 0;
            background-color:#ff9000;
            color:#fff;
        }
        .discuss{
            font-size: 16px;
            color:#000;
        }
        .discuss-list{
            margin:8px 0;
            height:113px;
            border:2px solid #ECEAE8;
            // box-shadow: 0 0 2 0 #ccc;
            textarea{
                height:68px;
                width:100%;
                resize: none;
                color:#ECEAE8;
                overflow-x: hidden;
                overflow-y: auto;
                border: none;
                line-height: 22px;
                font-size: 14px;
                outline: 0;
            }
            .discuss-info{
                height:37px;
               background-color:#fbfbfb;
                button{
                     height:37px;
                    width:100px;
                    background-color:#ff9000;
                    border:none;
                    color:#fff;
                }
            }
        }
    }

    //最后一页
     .finally{
            height:50px;
            background-color: #f2f2f2;
            p{
                font-size: 16px;
               padding-top:15px;
                text-align: center;
                color:#000;
                // background-color: #fff;
            }
        }


    //跳转页面
    .htlist-jump{
        height:36px;
        line-height: 36px;
        background-color: #fcfcfc;
        padding-left:5px;
        border-bottom:1px solid #ccc;
        a{
            color:#000;
        }
    }

    //底部
   .footer{
       margin-top:20px;
       .footer-app{
           height:84px;
           background-color: #434343;
           .media{
               position: relative;
           }
           .media-object{
               width:64px;
               margin:8px;
           }
            .media-body{ 
                color:#fecc8a;
                    padding-top:20px;
                    h4{
                        color:#fff;
                    }
            }
            .btn{
                position: absolute;
                right:0;
                top:0;
                a{
                    display: block;
                    width:80px;
                    height:28px;
                    line-height: 28px;
                    background-color: #6db110;
                    color:#fff;
                    border:1px solid #6db110;
                    border-radius: 3px;
                }
            }
       }
       .footer-login{
           padding-bottom:20px;
           background-color: #efefef;
           margin-bottom:44px;
        .footer-top{ 
            .footer-nav{
                height:34px;
                line-height: 34px;
                text-align: center;
                border:1px solid #ccc;
                a{
                     color:#000;
                     img{
                         height:15px;
                         vertical-align: baseline;
                     }
                }
            }
        }
       }
       .footer-shopping{
           position:fixed;
           z-index: 9999;
            // right: 0;
            // left: 0;
            bottom: 0;
            height: 44px;
            font-size: 10px;
            display: table;
           width:100%;
           height:44px;
           
           text-align: center;
           .row{
                font-size: 14px;
               .shopping-left{
                   height:44px;
                   padding:0;
                   a{
                       padding-top:10px;
                       color:#666666;
                       display:block;
                       background-color: #fff;
                       .glyphicon{
                           display: block;
                       }
                   }
               }
               .shopping-right{

                   background-color: #ff9000;
                   a{
                       line-height: 44px;
                       display: block;
                       color:#fff;
                       font-size: 16px;
                   }
               }
           }
       }
        //固定
    .footer-img{
        position: fixed;
        bottom:30px;
        right:0;
        z-index: 999999;
        a{
            img{
                width:60px;
            }
        }
    }


   }







}