/*头部*/
.head{
    width: 100%;
    height: 50px;
    background-color: #ff841d;
    position: relative;
}
.head .back>a>span{
    font-size: 20px;
    position: absolute;
    left: 10px;
    line-height: 50px;
    color: #fff;
}
.head h2{
    float: left;
    font-size: 20px;
    line-height: 50px;
    font-weight: bold;
    color: #fff;
    position: absolute;
    left: 40%;
}
.app-donwload img {
    width: 34px;
    height: 34px;
    margin-top: 8px;
    position: absolute;
    right: 10px;
}

/*主体内容*/
.goods .goods_title {
    font-size: 14px;
    font-weight: bold;
}


/*前往购买*/
.goBuy h2{
    width: 100%;
    background-color: #ff841d;
    font-size: 20px;
    line-height: 50px;
    font-weight: bold;
    color: #fff;
    text-align: center;
}
.goBuy img{
    display: inline-block;
    width: 100%;
    height: 100%;
    margin: 15px 10px;
}
.goBuy h3{
    font-size: 16px;
    color: #000;
    margin-left: 5px;
}

/*底部*/
.footer_login {
    background: #efefef;
    border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4;
    height: 34px;
    line-height: 34px;
    margin-top: 25px;
    clear: both;
}
.footer_login a{
    box-sizing: border-box;
    float: left;
    font-size: 14px;
    border-right: 1px solid #c4c4c4;
    text-align: center;
    width: 30%;
}
.footer_login .back_top{
    width: 40%;
    border: 0;
}
.footer_login .back_top img{
    width: 15px;
    height: 15px;
}
.footer_end {
    background: #efefef;
    text-align: center;
    font-size: 12px;
    padding: 15px 0;
    color: #666;
}