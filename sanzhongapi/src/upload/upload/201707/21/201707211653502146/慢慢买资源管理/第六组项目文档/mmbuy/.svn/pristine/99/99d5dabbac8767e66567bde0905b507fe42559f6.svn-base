
input,button{
    outline: none;
}
main .container h3{
    font-size: 18px;
    font-weight: bold;
    line-height: normal;
}
main .container>.price{
   color: #ff6c00;
  
}

main .container>.time{
   color: #999999;
   font-size: 12px;
   margin: 15px 0;
}
main .container .product_detail{
   font-size: 14px;
   color:#606060;
   line-height: normal;
   
}
main .container .gobuy{
    margin-top: 20px;
    text-align: center;
    margin-bottom: 30px;
}
main .container .gobuy button{
   width: 92%;
   background: #FF9000;
   color: white;
   cursor: pointer;
}
main .container .comment {
    position: relative;
    margin-bottom: 20px;
}
main .container .comment form textarea{
    width: 100%;
    height: 100px;
    resize: none;
    border:none;
    padding: 10px;
    border-radius: none;
    outline: none;
    box-shadow: -1px -1px 1px #999,1px 1px 1px #999;
}
main .container .comment .btn{
    width: 100px;
    background: #FF9000;
    color: white;
    cursor: pointer;
    position: absolute;
    right: -1px;
    bottom: 2px;
}
main .container .nav a{
    color: black;
}

main .container .newComment ul{
  list-style: none;
  padding: 0;
  padding: 20px 0px;
  border-bottom: 1px solid #999;
}
.newComment ul li .person{
    width: 50px;
    position: absolute;
    left: 0;
}
.newComment ul li .person img{
    border-radius: 50%;
}
.newComment ul li{
  padding-left: 50px;
  position: relative;
}
.newComment ul li .person_comment{
    width: 100%;
}


.product_detail img{
    width: 120px;
    height: 120px;
    float: right;
}