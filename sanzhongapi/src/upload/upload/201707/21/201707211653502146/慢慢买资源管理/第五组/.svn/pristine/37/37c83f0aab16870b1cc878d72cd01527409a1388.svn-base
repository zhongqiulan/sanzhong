body{
    background-color:#f1f1f1;
}

.header-wrap{
    header{
        display:flex;
        background-color:#ff841d;
        height: 0.8rem;
        align-items:center;
        justify-content: center;

        .back{
            a{
                display: flex;
                width: 0.8rem;
                height: 0.8rem;
                align-items:center;
                justify-content: center;
                color: #fff;
            }

            .iconfont{
                font-size:0.4rem;
            }
        }
        .title{
            flex:1;

            h2{
                font-size: 0.4rem;
                line-height: 0.8rem;
                color: #fff;
                text-align: center;
            }
        }
        .app-download{
            a{
                background:url('../images/header_app.png') no-repeat center center;
                background-size:0.6rem;
                height:0.8rem;
                width: 0.8rem;
                margin-right: 0.1rem;
            }
        }
    }
}

.nav-sel{
    >ul{
        display:flex;
        border-bottom: 1px solid #dadada;
        background-color:#fff;
        
        li{
            flex-grow:3;
            color:#565656;

            a{
                display:flex;
                height:0.7rem;
                align-items:center;
                justify-content:center;
                font-size: 0.2rem;

                .iconfont{
                    font-size: 0.6rem;
                }
            }
        }
        li.search{
            border-left:1px solid #dadada;
        }
    }

    .popup{
        div{
            display:none;
        }
        div.active{
            display:block;
        }
        ul{
            background-color: #fff;
            font-size:0.4rem;

            li{
                border-bottom:1px solid #ccc;
                padding:0.12rem;

                display:flex;
                align-items:center;
                justify-content: space-between;

                a{
                    flex:1;
                }
                i{
                    font-size:0.4rem;
                    color: green;
                    display: none;
                }
                i.active{
                    display: block;
                }
            }
        }
    }
}

.prolist{
    padding:0 0.1rem 0.1rem;
    ul{
        display:flex;
        flex-wrap:wrap;
        justify-content:space-between;
        li{
            width: 49%;
            background-color:#fff;
            padding:0.1rem;
            box-sizing:border-box;
            margin-top:0.1rem;

            img{
                width: 100%;
                display:block;
            }
            p{  
                margin-top:0.1rem;
                font-size:0.3rem;
                display:-webkit-box;
                overflow:hidden;
                text-overflow:ellipsis;
                word-wrap:break-word;
                -webkit-box-orient:vertical;
                -webkit-line-clamp:2;
            }
            div.clearfix{
                margin-top:0.14rem;
                .price{
                    float:left;
                    color:red;
                    font-size:0.5rem;
                }
                a{
                    margin-top:0.1rem;
                    float:right;
                    font-size:0.3rem;
                    width: 1.2rem;
                    height: 0.5rem;
                    line-height: 0.5rem;
                    text-align: center;
                    color: #fff;
                    border-radius: 4px;
                    background-color:#ff9501;
                }
            }

        }
    }
}