@import "base.less";
@media(min-width:1200px){
     .center{
         width:1000px;
         margin:0 auto;
     }
 }
// *************** 省钱控头部
.view{
   .save_head{
      
       width: 100%;
       background-color:#ff841d;
       .pull-left{
           font-size: 20px;
           line-height: 40px;
           color: white;
       }
       .save_title{
           line-height: 40px;
           height: 40px;
           display: inline-block;
           text-align: center;
           color:white;
           font-size: 24px;
           margin:0 auto;
           width: 208px;

       }
       .pull-right{
            line-height: 40px;
            img{
                width: 28px;
                height: 28px;            
            }
       } 
   } 
}
// *************** 省钱控主体
.view{
    .center{       
        .cloth{
            margin-top: 10px;
            position: relative;
            img{
                width: 92px;
                height: 92px;
            }
            .cloth_word{
                position: absolute;
                height: 113px;
                left: 100px;
                top: 0;
                .word_top{
                    font-size: 17px;
                    span{
                        color:#ff6c00;
                    }
                }
                .word_bot{
                    position: absolute;
                    bottom: 0;  
                    font-size: 12px;
                    color:#a1a1a1;                 
                }               
            }
        }
        .commits{
            font-size: 12px;
            color:#a1a1a1;
            margin-top: 90px;
            span{
                font-size: 16px;
            }           
        }
    }
}

// *************** 省钱控尾部部*************
.view{
    .save_foot{
        line-height: 78px;
        height: 78px;
        background-color: #f2f2f2;
        .top_page{
         text-align: center;
            a{
                padding: 7px 20px;
                border: 1px solid #d2d2d2;
                background-color: #e1e1e1;
                border-radius: 4px;
                color:black;
            }
        }
        .middle_btn{
            text-align: center;
            select{
                width: 124px;
                height: 30px;
            }
        }
    }
    .to_save{
        border-bottom: 1px solid #cccccc;
        border-top: 1px solid #cccccc;
         background-color: #f5f5f5;
        .to_save_word{
            height: 35px;
            line-height: 35px;        
        }
    }
    .to_top{
        background-color: #efefef;
       div{
           text-align: center;
           font-size: 16px;
           border-bottom: 1px solid #c4c4c4;
           a{
               color:black;
               height: 35px;
               line-height: 35px;
           }          
       }
       div:nth-of-type(1){
           border-right: 1px solid #c4c4c4;
       }
       div:nth-of-type(2){
           border-right: 1px solid #c4c4c4;
       }
    }
}