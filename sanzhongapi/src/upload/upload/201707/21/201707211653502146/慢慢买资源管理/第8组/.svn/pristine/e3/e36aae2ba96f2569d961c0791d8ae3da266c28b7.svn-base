@import "init.css";
@import "font-icon.css";
header {
    position: relative;
    width: 100%;
    height: 44px;
    padding: 0 50px;
    background-color: #ff841d;
    .logo {
        position: absolute;
        width: 200px;
        height: 44px;
        top: 0;
        left: 0;
        background-image: url('../../images/header_logo.png');
        background-size: 182px 25px;
        background-repeat: no-repeat;
        background-position: 8px 10px;
    }
    .AppDownLoad {
        position: absolute;
        width: 50px;
        height: 44px;
        top: 0;
        right: 0;
        background-image: url('../../images/header_app.png');
        background-size: 34px 34px;
        background-repeat: no-repeat;
        background-position: 8px 6px;
    }
}

.search {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    .form-group {
        float: left;
        width: 78%;
        margin-right: 5px;
        margin-bottom: 0px;
        input {
            border-radius: 20px;
            background-color: #f1f1f1;
        }
    }
    .btn {
        border-radius: 20px;
        padding: 6px 20px;
        background-color: #ff841d;
        color: white;
    }
}

nav {
    width: 100%;
    height: 38px;
    background-color: #ebebeb;
    background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
    border-top: solid 1px #ebebeb;
    border-bottom: 1px solid #ccc;
    padding-left: 10px;
    margin-bottom: 10px;
    a {
        line-height: 38px;
        font-size: 13px;
        margin-right: 3px;
    }
    a:visited {
        text-decoration: none
    }
    ;
    a:active {
        text-decoration: none;
    }
    #backBtn {
        float: right;
        width: 40px;
        height: 25px;
        margin: 5px 10px 0 0;
        border: 1px solid #ccc;
        font-size: 15px;
        border-radius: 3px;
        text-align: center;
        line-height: 25px;
    }
}

.tradeList {
    h2 {
        color: #a27343;
        height: 38px;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-left: none;
        border-right: none;
        background-color: #eeeeee;
        margin-bottom: 10px;
    }
    ul {
        margin-bottom: 10px; //列表样式
        .Top10 {
            width: 100%;
            color: black;
            font-weight: 600;
            line-height: 28px;
            padding: 5px;
            padding-left: 10px;
            border-top: 1px solid #ccc;
            background-color: #ededed;
            i {
                float: right;
                font-weight: 100;
            }
        } //Top10详情样式
        .TopList {
            background-color: white;
            border-top: 1px solid #ccc; // padding: 5px 0;
            .media {
                margin-top: 0;
                padding: 10px 0;
                .media-left {
                    span {
                        width: 18px;
                        height: 18px;
                        background-color: #c9c9c9;
                        margin-left: 10px;
                        color: white;
                        text-align: center;
                    }
                    span.red {
                        background-color: #f10e0f;
                    }
                    span.yellow {
                        background-color: #ff9314;
                    }
                    span.green {
                        background-color: #8adf5b;
                    }
                }
                .media-body {
                    color: #b6b6b6;
                    h4 {
                        color: #393939;
                        font-weight: 600;
                        padding-top: 3px;
                    }
                    i {
                        float: right;
                        margin: -10px 5px 0 0;
                        font-size: 20px;
                        font-weight: 100;
                    }
                }
            }
        } //商品详情了
        .TopInfo {
            border-top: 1px solid #ccc;
            padding: 3px 0;
            .media {
                .media-left {
                    width: 30%;
                    img {
                        width: 100%;
                    }
                }
                .media-body {
                    h4 {
                        font-size: 15px;
                        color: #6f6f6f;
                        line-height: 23px;
                    }
                    span {
                        display: inline-block;
                        padding: 4px 0px;
                        font-size: 16px;
                        color: red;
                    }
                    p {
                        span {
                            font-size: 12px;
                            margin-right: 5px;
                            color: #b6b6b6;
                        }
                    }
                }
            }
        } //评论
        .comment {
            .media {
                .media-left {
                    width: 30%;
                    img {
                        width: 100%;
                    }
                }
                .media-body {
                    h4 {
                        font-size: 15px;
                        color: #6f6f6f;
                        line-height: 23px;
                    }
                }
            }
            .outerBox {
                border: 1px solid #ccc;
                margin: 15px 10px 10px 10px;
                .comment_con {
                    padding: 5px 10px;
                    border-bottom: 1px solid #ccc;
                    p {
                        margin: 5px 15px 5px 0px;
                        color: black;
                        span:nth-of-type(2) {
                            float: right;
                        }
                    }
                    p:nth-of-type(2){
                        text-align: right;
                    }
                }
            }
        }
    }
}

footer {
    text-align: center;
    #login {
        width: 100%;
        text-align: center;
        i {
            float: left;
            height: 35px;
            line-height: 35px;
            width: 33.333%;
            font-style: normal;
            border: 1px solid #ccc;
            border-left: none;
            border-right: none;
            box-sizing: border-box;
            background-color: #efefef;
        }
        i:nth-of-type(2) {
            border-left: 1px solid #ccc;
            border-right: 1px solid #ccc;
        }
    }
    .copy {
        width: 100%;
        display: block;
        border-bottom: 1px solid #ccc;
        font-style: normal;
        padding: 10px;
        font-size: 12px;
        color: #8b8b8b;
        background-color: #efefef;
        span:nth-of-type(1) {
            color: red;
            font-weight: 600;
        }
        span:nth-of-type(2) {
            color: black;
        }
    }
}

.TopBtn {
    position: fixed;
    display: none;
    bottom: 50px;
    right: 15px;
    width: 40px;
    height: 40px;
    background-color: rgba(0, 0, 0, .5);
    border-radius: 50%;
    text-align: center;
    span {
        line-height: 40px;
        font-size: 23px;
        color: skyblue;
    }
}