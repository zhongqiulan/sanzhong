@import '../base.css';
.view main .title {
  border-top: 1px solid #ccc;
  position: relative;
}
.view main .title .left {
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
}
.view main .title .left a {
  height: 100%;
  display: inline-block;
  color: #000;
  text-decoration: none;
}
.view main .title .right {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translate(-50%, -50%);
  padding: 2px 4px;
  background-color: #ccc;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.view main .content {
  background-color: #fff;
}
.view main .content .content-title {
  text-align: center;
  padding: 10px 20px;
  position: relative;
}
.view main .content .content-title > div {
  width: 100%;
  height: 40px;
  padding: 0 40px;
  overflow: hidden;
}
.view main .content .content-title i {
  display: block;
  position: absolute;
  bottom: 30px;
  right: 20px;
  width: 40px;
  height: 40px;
  text-align: center;
  border-radius: 50%;
  background-color: #8bc800;
  color: #fff;
  line-height: 40px;
  font-size: 12px;
}
.view main .content .parity {
  width: 100%;
}
.view main .content .parity > ul {
  padding: 0;
  text-align: center;
}
.view main .content .parity > ul > li {
  padding: 0;
  margin: 0;
  height: 40px;
  line-height: 40px;
  border: 1px solid #c14d00;
  border-left: none;
  background-color: #ffbd08;
  color: #fff;
}
.view main .content .parity > ul > li.active {
  background-color: #ff950c;
  position: relative;
}
.view main .content .parity > ul > li.active:after {
  content: "";
  width: 16px;
  height: 6px;
  position: absolute;
  bottom: -6px;
  right: 50%;
  z-index: 100;
  transform: translateX(50%);
  background-image: url("../../images/tab_ar.png");
  background-position: 0 6px;
}
.view main .content .parity > ul > li a {
  margin: 0;
  padding: 0;
  padding-top: 8px;
  text-align: center;
  background-color: inherit;
}
.view main .content .parity .tab-content {
  padding: 5px 10px;
  color: #f00;
}
.view main .content .parity .parity-info {
  padding: 5px 10px;
  color: #ccc;
  font-size: 12px;
}
.view main .evaluation {
  background-color: #fff;
}
.view main .evaluation > h3 {
  background-color: #dbdbdb;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
}
.view main .evaluation .info {
  padding: 5px 10px;
}
.view main .evaluation .info .info-title {
  height: 40px;
  color: #ccc;
  font-size: 13px;
  text-align: right;
}
.view main .evaluation .info .info-title .pull-left {
  height: 40px;
  line-height: 40px;
}
.view main .evaluation .info .info-title .pull-right {
  line-height: 20px;
}
.view main .evaluation .info .info-content {
  border-bottom: 1px solid #ccc;
  padding: 5px 0;
}
.view .more {
  width: 100%;
  height: 60px;
  background-color: #fff;
  text-align: center;
}
.view .more button {
  width: 80%;
  height: 40px;
  margin-top: 10px;
  border: 1px solid #ccc;
  border-radius: 10px;
}
body,
a {
  font-family: "微软雅黑";
}
