@import "../base.css";
#views {
  min-width: 210px;
  position: relative;
}
#views a:hover {
  color: #666 !important;
}
#views > #header {
  width: 100%;
  height: 44px;
  background: #ff841d;
  line-height: 44px;
  overflow: hidden;
}
#views > #header > .icon_back {
  width: 44px;
  height: 44px;
  position: absolute;
  top: 0;
  left: 0;
}
#views > #header > .icon_back > i {
  position: absolute;
  top: 50%;
  left: 25%;
  width: 22px;
  height: 22px;
  color: #fff;
  font-size: 22px;
  transform: translateY(-50%);
}
#views > #header > h1 {
  height: 44px;
  line-height: 44px;
  font-size: 22px;
  font-weight: 600;
  color: #fff;
  text-align: center;
  margin: 0px 90px;
}
#views > #header > .icon_app {
  width: 44px;
  height: 44px;
  text-align: center;
  position: absolute;
  top: 0;
  right: 10px;
}
#views > #header > .icon_app img {
  height: 34px;
  width: 34px;
}
#views .containers #main ul li > a {
  display: block;
  padding: 14px 8px;
}
#views .containers #main ul li > a:hover {
  color: #000;
  text-decoration: none;
}
#views .containers #main ul li > a > .media .media-left img {
  width: 100px;
  height: 100px;
}
#views .containers #main ul li > a > .media .media-body h4 {
  font-size: 15px;
  min-height: 57px;
}
#views .containers #main ul li > a > .media .media-body h4 span {
  color: #ff6c00;
}
#views .containers #main ul li > a > .media .media-body .other {
  font-size: 13px;
}
#views .containers #main ul li > a > .media .media-body .other .store {
  float: left;
  color: #888;
}
#views .containers #main ul li > a > .media .media-body .other .comment {
  float: right;
  height: 15px;
  line-height: 15px;
  color: #aaa;
}
#views .containers #pages {
  width: 100%;
  height: 74px;
  background-color: #f2f2f2;
}
#views .containers #pages ul {
  padding-top: 26px;
}
#views .containers #pages ul li {
  float: left;
  width: 33.33%;
  text-align: center;
}
#views .containers #pages ul li a {
  margin: 0px 5px;
  padding: 8px 22px;
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#f2f2f2), to(#d4d4d4));
  border-radius: 5px;
  box-sizing: border-box;
  border: 1px solid #ccc;
}
#views .containers #pages ul li a:hover {
  text-decoration: none;
}
#views .containers #pages ul li select {
  width: 100%;
  height: 34px;
  position: relative;
  top: -6px;
}
#views .containers .path {
  background: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ebebeb));
  border-bottom: 1px solid #ddd;
  padding: 7px;
}
#views .containers p {
  padding: 12px;
}
#views .footer {
  width: 100%;
  background-color: #f6f6f6;
}
#views .footer .footertop a {
  width: 33.33%;
  display: block;
  float: left;
  border-right: 1px solid #ccc;
  text-align: center;
  border-top: 1px solid #ccc;
  font-size: 16px;
  font-weight: 700;
}
#views .footer .footertop a img {
  width: 15px;
  height: 15px;
  margin-right: 3px;
  margin-top: -4px;
}
#views .footer .footertop a:hover {
  text-decoration: none;
  color: #666;
}
#views .footer .footertop a:last-child {
  border-right: none;
}
#views .footer .footercenter {
  border-top: 1px solid #ccc;
  padding: 20px;
  height: 60px;
  text-align: center;
  margin-bottom: 10px;
}
#views .footer .footercenter a:nth-of-type(1) {
  color: red;
}
#views .footer .footercenter a:nth-of-type(2) {
  color: #000;
}
#views #man_app {
  width: 60px;
  height: 67px;
  position: fixed;
  right: 0;
  bottom: 32px;
}
#views #man_app a img {
  width: 100%;
  height: 100%;
}
