@import "bass.less";
.list {
    // 导航
    .list_nav {
        line-height: 40px;
        height: 40px;
        border-top: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        padding: 0 10px;
        .navleft {
            a {
                color: #000;
                display: inline-block;
            }
        }
        .navright {
            button {
                width: 60px;
                height: 30px;
                line-height: 30px;
                margin: 0;
                padding: 0;
                margin-top: 4px;
            }
        }
    } //商品列表
    .product {
        .media {
            &:first-child {
                margin-top: 0;
            }
            .media-left {
                width: 120px;
                height: 120px;
                a {
                    width: 120px;
                    height: 120px;
                    img {
                        width: 100%;
                    }
                }
            }
        }
    } //底部分页
    .footer {}
}