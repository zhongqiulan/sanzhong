@charset "utf-8";
/* CSS Document */
html,
body,
ul,
li,
ol,
dl,
dd,
dt,
p,
h1,
h2,
h3,
h4,
h5,
h6,
form,
header,
main,
footer,
div,
fieldset,
legend,
img {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
a {
  text-decoration: none;
  color: inherit;
  box-sizing: border-box;
}
input {
  outline: none;
  border: none;
  display: block;
  width: 100%;
  height: 100%;
}
ul {
  list-style: none;
}
img {
  display: block;
  width: 100%;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.clearfix {
  zoom: 1;
}
textarea {
  width: 95%;
}
a {
  color: #000;
  text-decoration: none !important;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
em,
i {
  font-style: normal;
}
.left-menu > .list-group > li > a {
  display: block;
}
.left-menu > .list-group > li > a > img {
  width: 100%;
}
.layout {
  position: relative;
  height: 100%;
  transition: all .5s;
}
.layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
}
.layout > .header {
  position: relative;
  text-align: center;
  background-color: #f5f5f5;
}
.layout > .header > h4,
.layout > .header > h3 {
  width: 100%;
  margin: 0;
  height: 40px;
  line-height: 40px;
}
.layout > .header > .icon-menu {
  position: absolute;
  left: 10px;
  top: 10px;
  font-size: 20px;
}
.layout > .header > .icon-search {
  position: absolute;
  right: 10px;
  top: 10px;
  font-size: 20px;
}
.layout > .header > a > .icon-back {
  position: absolute;
  left: 10px;
  top: 10px;
  font-size: 20px;
}
body {
  background-color: #f2f2f2;
}
.koubei-bread p {
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  background-color: #f1f1f1;
  border-top: 1px solid #d6d6d6;
  border-bottom: 1px solid #d6d6d6;
  box-shadow: 1px 0px 1px #d6d6d6;
  padding-left: 10px;
}
.koubei-bread p span {
  font-weight: bold;
}
.koubei-title {
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  font-weight: bold;
  color: #874604;
  padding-left: 10px;
  border-bottom: 1px solid #d6d6d6;
  box-shadow: 1px 0px 1px #d6d6d6;
}
.koubei-main {
  padding: 10px;
}
.koubei-main .koubei-comment .product-info img {
  width: 80px;
  float: left;
}
.koubei-main .koubei-comment .product-info p {
  padding-left: 90px;
  color: #9f9f9f;
  line-height: 22px;
}
.koubei-main .koubei-comment .comment-content {
  background-color: #f8f8f8;
  padding: 10px;
  margin-top: 10px;
  position: relative;
}
.koubei-main .koubei-comment .comment-content .top .star {
  font-size: 18px;
  vertical-align: top;
  color: #ff9000;
}
.koubei-main .koubei-comment .comment-content .top .name {
  color: #677d23;
}
.koubei-main .koubei-comment .comment-content .top .time {
  color: #a1a1a1;
  float: right;
}
.koubei-main .koubei-comment .comment-content .text {
  font-size: 15px;
  color: #000;
  line-height: 22px;
  margin-top: 10px;
}
.koubei-main .koubei-comment .comment-content:after {
  content: "";
  border-width: 8px;
  border-style: solid;
  border-color: transparent transparent #f8f8f8 transparent;
  position: absolute;
  top: -16px;
  left: 30px;
}
