@import "bass.less";
.details {
    // 导航
    .list_nav {
        line-height: 40px;
        height: 40px;
        border-top: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
        padding: 0 10px;
        background: -ms-linear-gradient(top, #ededed, #d6d6d6);
        /* IE 10 */
        background: -moz-linear-gradient(top, #ededed, #d6d6d6);
        /*火狐*/
        /*谷歌*/
        background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ededed), to(#d6d6d6));
        /* Safari 4-5, Chrome 1-9*/
        background: -webkit-linear-gradient(top, #ededed, #d6d6d6);
        /*Safari5.1 Chrome 10+*/
        background: -o-linear-gradient(top, #ededed, #d6d6d6);
        /*Opera 11.10+*/
        .navleft {
            a {
                color: #000;
                display: inline-block;
            }
        }
        .navright {
            button {
                width: 60px;
                height: 30px;
                line-height: 30px;
                margin: 0;
                padding: 0;
                margin-top: 4px;
            }
        }
    } //产品图
    .picture_info {
        border-bottom: 1px solid #ccc;
        background: #fff;
        .pic {
            padding: 20px 0;
            text-align: center;
            img {
                width: 160px;
            }
        }
        h3 {
            margin: 0;
            font-size: 16px;
            padding-left: 10px;
            color: #333;
        }
        .tableB {
            padding: 20px 10px;
        }
    } //评价
    .comment {
        background: #f2f2f2;
        overflow: hidden; //评价标签按钮
        .title {
            margin: 20px 0;
            >.nav {
                padding-right: 0px;
                height: 47px;
                font-size: 18px;
                border-top: 1px solid #c65f1a;
                border-bottom: 1px solid #c65f1a;
                >li {
                    text-align: center;
                    padding: 0;
                    background: -ms-linear-gradient(top, #ffce4a, #ffbc03);
                    /* IE 10 */
                    background: -moz-linear-gradient(top, #ffce4a, #ffbc03);
                    /*火狐*/
                    /*谷歌*/
                    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ffce4a), to(#ffbc03));
                    /* Safari 4-5, Chrome 1-9*/
                    background: -webkit-linear-gradient(top, #ffce4a, #ffbc03);
                    /*Safari5.1 Chrome 10+*/
                    background: -o-linear-gradient(top, #ffce4a, #ffbc03);
                    /*Opera 11.10+*/
                    a {
                        color: #fff;
                        background: none;
                        border: none;
                    }
                }
                li.active {
                    background: -ms-linear-gradient(top, #ffa52f, #ff9001);
                    /* IE 10 */
                    background: -moz-linear-gradient(top, #ffa52f, #ff9001);
                    /*火狐*/
                    /*谷歌*/
                    background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ffa52f), to(#ff9001));
                    /* Safari 4-5, Chrome 1-9*/
                    background: -webkit-linear-gradient(top, #ffa52f, #ff9001);
                    /*Safari5.1 Chrome 10+*/
                    background: -o-linear-gradient(top, #ffa52f, #ff9001);
                    /*Opera 11.10+*/
                }
                li+li {
                    border-left: 1px solid #c65f1a
                }
            }
            .tab-content {
                div {
                    .nav {
                        padding-right: 0px;
                        height: 43px;
                        font-size: 18px;
                        border-top: 1px solid #c65f1a;
                        border-bottom: 1px solid #dddddd;
                        li {
                            text-align: center;
                            padding: 0;
                            a {
                                color: #333;
                                font-size: 14px;
                                background: none;
                                border: none;
                            }
                        }
                        li.active {
                            border-bottom: 1px solid #ff7700;
                        }
                    }
                }
            }
        } //评价详情
        .comment_detail {
            padding: 10px 10px 15px;
            .username {
                color: #9b9da0;
                .pull-left {
                    font-size: 16px;
                }
                .pull-right {
                    font-size: 12px;
                }
            }
            .buy {
                color: #ff9000;
                font-size: 16px;
                .pull-right {
                    font-size: 12px;
                    color: #9b9da0;
                }
            }
            .comment_details {
                padding: 10px 0;
            }
            .huifu {
                color: #9b9da0;
                font-size: 12px;
            }
        } //分页
        .fenye {
            button {
                padding: 0;
                width: 80px;
                height: 35px;
                border-radius: 4px;
                border: 1px solid #ccc;
                box-shadow: 0 1px 1px #bbb;
                background: -ms-linear-gradient(top, #ededed, #d6d6d6);
                /* IE 10 */
                background: -moz-linear-gradient(top, #ededed, #d6d6d6);
                /*火狐*/
                background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ededed), to(#d6d6d6));
                /*谷歌*/
                background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ededed), to(#d6d6d6));
                /* Safari 4-5, Chrome 1-9*/
                background: -webkit-linear-gradient(top, #ededed, #d6d6d6);
                /*Safari5.1 Chrome 10+*/
                background: -o-linear-gradient(top, #ededed, #d6d6d6);
                /*Opera 11.10+*/
            }
            .center {
                select {
                    width: 80px;
                    height: 35px;
                    text-align: center;
                    font-size: 14px;
                }
            }
        }
    }
}