header {
  width: 100%;
}
header h1 {
  width: 100%;
  border-bottom: 1px solid  #e6e6e6 ;
  background-color: #ff841d;
  height: 50px;
  padding-top: 13px;
  position: relative;
  padding-left: 25px;
  margin-top: 0;
}
header h1 a {
  display: block;
  height: 100%;
  width: 100%;
  background: url('../../../../images/header_logo.png') no-repeat 0 0;
  background-size: 185.5px ;
}
header h1 span {
  height: 34px;
  width: 34px;
  position: absolute;
  background: url('../../../../images/header_app.png') no-repeat 0 0;
  background-size: 34px ;
  top: 10px;
  right: 10px;
}
header .search .input-group {
  width: 100%;
  padding: 10px;
  position: relative;
  background-color: #fff;
}
header .search .input-group input {
  border-radius: 50px;
  width: 94%;
  font-size: 16px;
  background-color: #f6f6f6;
  outline-color: none;
  border-color: none;
  font-size: 14px;
  border: none;
  outline: none;
}
header .search .input-group span {
  width: 63px;
  border-radius: 30px;
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 999;
  height: 34px;
  background-color: #ff841d;
  font-size: 16px;
  color: #fff;
  line-height: 19px;
}
.main {
  background-color: #f2f2f2;
}
.main .nav {
  height: 40px;
  line-height: 40px;
  padding-left: 10px;
  border-top: 2px solid  #ececec;
  border-bottom: 1px solid  #ececec;
  background-color: #ebebeb;
}
.main .nav a {
  font-size: 16px;
  text-decoration: none;
}
.main .nav span {
  font-size: 12px;
}
.main .box .title {
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: #874604;
  margin: 10px 5px ;
  border: 1px solid #ccc;
  background-color: #eee;
  padding-left: 10px;
  font-weight: 700;
}
.main .box .content {
  padding: 0 15px;
}
.main .box .content ul {
  list-style: none;
  padding-left: 0;
  margin-bottom: 0;
}
.main .box .content ul li {
  position: relative;
  border-bottom: 1px  solid  #ccc;
}
.main .box .content ul li a {
  display: block;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  font-weight: 700;
  color: #000;
  text-decoration: none;
}
.main .box .content ul li span {
  position: absolute;
  right: 11px;
  top: 13px;
  font-size: 14px;
}
.footer {
  background: #f2f2f2;
  overflow: hidden;
}
.footer .more-info {
  padding: 8px;
  text-align: center;
  background: #fff;
  width: 96%;
  margin: 10px 10px;
  border-radius: 5px;
}
.footer .more-info a {
  color: #000;
}
.footer .brand-reco {
  height: 35px;
  background: #ff841d;
  padding: 0 10px;
}
.footer .brand-reco h3 {
  float: left;
  padding: 0px;
  margin: 0px;
  line-height: 35px;
  font-size: 18px;
  font-weight: bold;
  color: #fff;
}
.footer .brand-reco a {
  float: right;
  line-height: 35px;
}
.footer .brand-reco a img {
  width: 20px;
}
.footer .tool ul {
  list-style: none;
  margin: 10px 0px;
}
.footer .tool ul li {
  width: 33.3%;
  float: left;
  text-align: center;
  border: 1px solid #ccc;
  padding: 8px;
}
.footer .tool .mmurl {
  text-align: center;
}
.footer .tool .mmurl span {
  color: red;
}
