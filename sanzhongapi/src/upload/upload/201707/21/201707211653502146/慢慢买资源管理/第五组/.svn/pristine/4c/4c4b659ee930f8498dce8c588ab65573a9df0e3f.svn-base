@import "base.less";

@mmbColor: #ff841d;


.save_box{
	background-color: #f2f2f2;
}
//头部
.header{
	background-color:@mmbColor;
	height: 44px;
	width: 100%;
	position: relative;
	.back{
		width:50px;
		height: 100%;
		position: absolute;
		left: 10px;
		a{
			width: 100%;
			height: 100%;
			font-size: 30px;
			>i{
				color: #fff;
				font-size: 18px;
				font-weight: bold;
			}
		}
	}
	h1{
		text-align: center;
		line-height: 44px;
		font-size: 20px;
		color: #fff;
		margin: 0;
	}
	.home{
		position: absolute;
		right: 0;
		top: 6px;
		img{
			width: 32px;
			height: 32px;
		}
	}
}

//主体部分
.content{
	margin:0 auto;
	max-width: 960px;
	.ul_content {
		margin: 0 auto;
		text-align: left;
		background-color: #fff;
		font-size: 14px;
		li{
			padding: 14px 8px;
			border-bottom: 1px solid #e0e0e0;
			a{
			text-decoration: none;
			position: relative;
			.pic{
				float: left;
				>img{
					width: 100px;
					height: 100px;
				}
			}
			.info{
				padding-left: 126px;
				.title{
					color: #333333;
					font-size: 15px;
					line-height: 19px;
					min-height: 57px;
					span{
						color: #ff6c00;
					}
				}
				.other{
					margin-top: 8px;
					color: #a1a1a1;
					font-size: 12px;
					.mall{
						float: left;
					}
					.comment{
						>i{
							width: 14px;
							height: 15px;
							margin-right: 5px;
							font-size: 12px;
						}
						float: right;
					}
				}
			}
			}
		}
	}
	.page{
		background-color: #f2f2f2;
		height: 80px;
		padding-top: 23px;
		.page_c{
			height: 34px;
			position: relative;
			.pre_page{
				position: absolute;
				top: 0;
				left: 10px;
				button{
					padding: 6px 20px;
					background-color: #d4d4d4;
					border-radius: 8px;
				}
			}
			.search{
				margin: 0 auto;
				width: 100px;
				select{
					height: 34px;
					width: 100px;
					
				}
			}
			.next_page{
				position: absolute;
				top: 0;
				right: 10px;
				button{
					padding: 6px 20px;
					background-color: #d4d4d4;
					border-radius: 8px;
				}
			}
		}
	}
}

//导航条
.save_nav{
	height: 36px;
	background-color: #ebebeb;
	padding-left: 10px;
	border-top: 1px solid  #ebebeb;
	border-bottom: 1px solid #ccc;
	a{
		display: inline-block;
		span{
		line-height: 36px;
	}
	}
}

//底部
.footer{
	padding-top: 20px;
	.footer_top{
		a{
			float:left;
			width:33.33%;
			text-align: center;
			height: 34px;
			line-height: 34px;
			background-color: #f2f2f2;
			border-top: 1px solid #c4c4c4;
			border-bottom: 1px solid #c4c4c4;
			border-left: 1px solid #c4c4c4;
			>img{
				display: inline-block;
				width: 15px;
				height: 15px;
				margin:0 auto;
			}
		}
	}
	.footer_info{
		font-size: 12px;
		padding: 14px 0;
		.toot_app{
			text-align: center;
			color: #666;
			a{
				display: inline-block;
			}
			a.app_red{
				color: red;
			}
			a.app_self{
				color: #000;
			}
		}
		.foot_http{
			text-align: center;
			color: #666;
			a>img{
				width: 60px;
				position: fixed;
				right: 0;
				bottom: 20px;
			}
		}
	}
}
