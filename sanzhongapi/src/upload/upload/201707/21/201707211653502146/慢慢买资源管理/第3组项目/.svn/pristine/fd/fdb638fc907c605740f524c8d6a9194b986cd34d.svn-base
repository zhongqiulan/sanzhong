.saveMoneyHeader {
  height: 44px;
  background-color: #ff841d;
}
.container {
  font-size: 16px;
  padding:0px;
}
.mainText {
  padding-left: 15px;
}
.mainText .info {
  font-size: 12px;
  margin: 12px 0;
}
.mainText .content img {
  width: 120px;
  float:right;
}
.purchase {
  padding: 10px 20px;
}
.purchase .goPurchase {
  width: 100%;
  background-color: #ff9000;
  color: white;
}
.tit {
  padding-left: 15px;
}
.reply {
  padding-left: 15px;
  padding-right: 15px;
}
.reply .form {
  border: 2px solid #eceae8;
}
.reply .form textarea {
  width: 100%;
  outline: none;
  border: none;
}
.reply .form .ctrl {
  height: 36px;
  background-color: #fbfbfb;
}
.reply .form .ctrl:after {
  content: " ";
  display: block;
  clear: both;
  height: 0;
}
.reply .form .ctrl input {
  float: right;
  background-color: #ff9000;
  height: 100%;
  padding: 0;
  border: 0;
  outline: none;
  width: 100px;
  border-top: 1px solid #f2f2f2;
}
#newcomment {
  clear: both;
}
.list ul {
  padding-left: 0;
}
.list ul li {
  display: flex;
  padding: 20px;
}
.list ul li:after {
  content: "";
  clear: both;
  display: block;
  height: 0;
}
.list ul li .userimg {
  width: 40px;
}
.list ul li .userimg img {
  width: 40px;
  height: 40px;
}
.list ul li .con {
  margin-left: 10px;
  flex: 1;
}
.list ul li .con .name .username {
  float: left;
  color: #5997c0;
}
.list ul li .con .name .time {
  float: right;
}
.list ul li .con .content {
  color: #606060;
}

div.href {
    background-image:linear-gradient(to bottom,#ffffff,#ebebeb);
    height: 36px;
    line-height: 36px;
    padding-left: 20px;
}

div.blank {
    background-color: #f2f2f2;
    height: 25px;
}
.tool .row {
    background-color:#efefef;
    border-top:1px solid #c4c4c4;
    border-bottom:1px solid #c4c4c4;
}
.tool .row a {
    background-color: #efefef;
    height: 30px;
    color:#5a5a5a;
}
.tool .row a:nth-last-of-type(-n+2) {
    border-left: 1px solid #c4c4c4;
}

.footer {
    text-align: center;
    padding-top: 10px;
    color:#666666;
    background-color: #efefef;
}
.footer .app{
    color:red;
}
.footer .cellphone {
    color:black;
}   
.website {
    margin-bottom:0;
}
