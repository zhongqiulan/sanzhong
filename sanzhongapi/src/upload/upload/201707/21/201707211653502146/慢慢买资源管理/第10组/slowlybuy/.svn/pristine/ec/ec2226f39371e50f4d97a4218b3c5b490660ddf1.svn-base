body {
    background: #efefef;
}

header {
    color: #fff;
    background: #ff841d;
    position: relative; //标题
    h2 {
        margin: 0;
        padding: 10px 50px;
        width: 100%;
        font-size: 22px;
        text-align: center;
    } //返回按钮
    .prev {
        position: absolute;
        left: 0;
        font-size: 22px;
        text-align: center;
        a {
            width: 50px;
            height: 44px;
            display: block;
            box-sizing: border-box;
            padding-top: 8px;
            span {
                color: #fff;
            }
        }
    }
    ; //app下载
    .download {
        position: absolute;
        right: 0;
        top: 0;
        a {
            width: 50px;
            height: 44px;
            display: block;
            img {
                width: 34px;
                margin-top: 7px;
            }
        }
    }
}

//筛选
.dropdown_box {
    background: #fff;
    border-bottom: 1px solid #ccc;
    font-size: 16px;
    text-align: center;
    .container-fluid {
        height: 40px;
        line-height: 40px;
        padding: 0;
        div {
            button {
                border: none;
                position: relative;
                span{
                    position: absolute;
                    top: 14px;
                    right: 0;
                }
            }
            ul {
                width: 100%;
                position: fixed;
                top: 82px;
            }
        }
        button#dropdownMenu1.dropdown-toggle.btn.btn-default:hover {
            background: #fff;
        }
        .open {
            border: none;
        }
    }
}

// 产品列表
.product {
    .container-fluid {
        padding: 0;
        .col-xs-6 {
            padding: 5px;
            .container-box {
                background: #fff;
                border: 1px solid #ccc;
                a {
                    display: block;
                    padding: 5px;
                    text-align: center;
                    img {
                        // width: 160px;
                        height: 160px;
                    }
                }
                p {
                    font-size: 14px;
                    padding-left: 10px;
                    width: 100%;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                }
                h3 {
                    color: #ff841d;
                    padding-left: 10px;
                    margin-top: 15px;
                    span {
                        font-size: 14px;
                    }
                }
            }
        }
    }
}