header {
    height: 44px;
    line-height: 44px;
    background-color: #ff841d;
    color: #fff;
    position: relative;
    h2 {
        padding: 0 60px;
        line-height: 44px;
        font-size: 20px;
        font-weight: 700;
        margin: 0;
        text-align: center;
    }
    .back,
    .app {
        position: absolute;
        width: 40px;
        height: 44px;
        top: 0;
    }
    .back {
        left: 5px;
        a {
            color: #fff;
        }
    }
    .app {
        right: 5px;
        img {
            width: 40px;
        }
    }
}