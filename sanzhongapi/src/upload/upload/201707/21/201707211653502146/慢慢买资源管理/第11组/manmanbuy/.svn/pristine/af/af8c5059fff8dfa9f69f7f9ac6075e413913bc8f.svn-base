@import '../base/base.less';


//公共样式
.view{
    //头部
    header{
            background: #f4483e;          
            color: white;
            position: relative;
            text-align: center;
            height: 45px;
           
            h1{
                line-height: 45px;
                font-size: 20px;
                font-weight: bold;
                margin:0;
                padding:0;
            }
            span,a{
                position: absolute;
            }
            span{
                width: 20px;
                height: 42px;
                left: 10px;
                top:15px;
                font-size: 20px;
                font-weight: normal;
            }
            a{
                right: 10px;
                top: 5px;
                img{
                    width: 34px;
                }
            }
    }

//回退
    .back{
            padding-left: 5px;
            height: 40px;
            margin-bottom: 20px;
            line-height: 40px;
            border-top:1px solid #e7e7e7;
            border-bottom:1px solid #c4c4c4;
            background-color: #ebebeb;
            background: -webkit-gradient(linear,0 0,0 100%,from(#ffffff),to(#ebebeb));
            a{
                color: #000;
            }
    }
//底部
    footer{
            background: #efefef;
            .menu{
                ul{
                    padding:0;
                    margin:0;
                }
                li{
                    height: 35px;
                    line-height: 35px;
                    text-align: center;
                    border-bottom: 1px solid #c4c4c4;
                    border-top: 1px solid #c4c4c4;
                    float: left;
                    width: 33.3%;
                    &:nth-of-type(2){
                        border:1px solid #c4c4c4;
                    }
                    a{
                        display: block;
                        color: #000;
                    }
                    img{
                        width: 15px;
                        display: inline-block;
                        margin-bottom: 6px;
                        margin-right: 3px;
                    }
                }
            }
            .xinxi{
                font-size: 13px;
                text-align: center;
                padding:15px 0;
                p{
                    margin: 0;
                    color:#747474;
                    a{
                         &:nth-of-type(1){
                             color: red;
                         }
                         &:nth-of-type(2){
                             color: #000;
                         }
                    }
                }
            }
    }

}


.couponindex{
    .view{       
        //
        .content{
            padding-top:20px;
            padding-bottom: 20px;
            .ken{
                width: 30%;
                float: left;
                margin-right: 10px;
                padding-top: 5px;
               border:1px solid #ccc;
               font-size: 12px;
               text-align: center;
               margin-bottom: 10px;
               cursor: pointer;
               img{
                   width: 50px;
                   display: block;
                   margin:0 auto;
               }
            }
        }

        .fix{
            position: fixed;
            bottom: 25px;
            right: 15px;
            img{
                width: 64px;
            }
        }

        
        
    }
}

.quan{
    .view{
        header{
            background: #f4483e;
        }

        .content{
            .top{
                text-align: center;
                color: #999;
                font-size: 10px;
                height: 38px;
                line-height: 38px;
                margin-bottom: 4px;
            }

            .quan-box{
                ul{
                    padding:0;
                }
                li{
                    padding:5px 0;
                    border-bottom:1px solid #e7e7e7;
                    a{
                        position: relative;
                        top:0;
                        left: 0;
                        z-index: 1;
                        color:  #333333;
                        width: 100%;
                        padding-right: 20px;
                    }
                         
                    .pic{
                        float: left;
                        padding:0 10px;
                        width: 100px;
                        img{
                            width: 100px;
                        }
                    }
                    .info{
                        margin-left: 120px;
                        .time{
                            color: #EE7700;
                            font-size: 12px;
                            margin-top: 5px;
                        }
                        strong{
                            color: rgba(51, 51, 51, 0.76);
                        }
                    }
                    .right{
                        width: 20px;
                        height: 20px;
                        position: absolute;
                        right: 5px;
                        top:20px;
                    }

                    

                }
            }
        }
        .fix{
            position: fixed;
            bottom: 25px;
            right: 15px;
            img{
                width: 64px;
            }
        }
    }

    .cover{
        display: none;
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 10;
        top:0;
        left: 0;
        background: rgba(0, 0, 0, 0.7);
        .box{
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0;  
            // transform: translateY(-50%);
            .carousel,.carousel-inner{
                width: 100%;
                height: 100%;
            }

        }
        .item{
            width: 100%;
            height: 100%;
            img{
                width: 200px;
                position: absolute;
                top:50%;
                left: 50%;
                transform: translate(-50%,-50%);
            }
        }     
        
        .arows{
            z-index: 1000;
            top:50%;
            transform:translateY(-50%);
            width: 43px;
            height: 58px;
            background: rgba(51, 51, 51, 0.55);
            border-radius: 7px;
            color: #c3c3c3;
            font-size: 35px;
            line-height: 58px;
            text-align: center;
            font-weight: normal;
        }
        .left{
            left: 40px;
        }
        .right{
            right: 40px;
        }

        .mouseover{
            background: rgba(51, 51, 51, 0.8);
            color: white;
        }
    }
}