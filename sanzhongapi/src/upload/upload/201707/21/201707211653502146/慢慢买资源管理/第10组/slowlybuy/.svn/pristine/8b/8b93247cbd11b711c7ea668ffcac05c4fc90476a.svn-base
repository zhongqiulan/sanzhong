img {
  width: 100%;
}
a {
  display: block;
}
a:hover,
a:focus {
  text-decoration: none;
}
.list .list_nav {
  line-height: 40px;
  height: 40px;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding: 0 10px;
}
.list .list_nav .navleft a {
  color: #000;
  display: inline-block;
}
.list .list_nav .navright button {
  width: 60px;
  height: 30px;
  line-height: 30px;
  margin: 0;
  padding: 0;
  margin-top: 4px;
}
.list .media {
  margin-top: 10px;
  padding: 0px 5px 10px 5px;
  border-bottom: 1px solid #ccc;
}
.list .media .media-left {
  width: 120px;
  height: 120px;
}
.list .media .media-left a {
  width: 120px;
  height: 120px;
}
.list .media .media-left a img {
  width: 100%;
}
.list .media .media-body {
  font-family: "微软雅黑";
}
.list .media .media-body h4 {
  font-size: 14px;
  line-height: 25px;
  letter-spacing: 0.3px;
}
.list .media .media-body h5 {
  font-size: 16px;
  color: #ed0000;
}
.list .media .media-body span {
  font-size: 12px;
  color: #a1a1a1;
}
.footer {
  background: #f2f2f2;
  padding: 20px 0;
}
.footer .container-fluid button {
  padding: 0;
  width: 80px;
  height: 35px;
  border-radius: 4px;
  border: 1px solid #ccc;
  box-shadow: 0 1px 1px #bbb;
  background: -ms-linear-gradient(top, #ededed, #d6d6d6);
  /* IE 10 */
  background: -moz-linear-gradient(top, #ededed, #d6d6d6);
  /*火狐*/
  /*谷歌*/
  background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#ededed), to(#d6d6d6));
  /* Safari 4-5, Chrome 1-9*/
  background: -webkit-linear-gradient(top, #ededed, #d6d6d6);
  /*Safari5.1 Chrome 10+*/
  background: -o-linear-gradient(top, #ededed, #d6d6d6);
  /*Opera 11.10+*/
}
.footer .container-fluid .center select {
  width: 80px;
  height: 35px;
  text-align: center;
  font-size: 14px;
}
.link {
  background: #f2f2f2;
  padding: 1px 0 20px 15px;
}
