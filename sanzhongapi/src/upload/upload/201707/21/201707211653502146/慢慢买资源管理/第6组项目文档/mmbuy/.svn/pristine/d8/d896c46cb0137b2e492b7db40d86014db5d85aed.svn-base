/* 商品展示部分 */
.gsshopnav-show {
  background-color: #f1f1f1;
  padding: 5px 6px;
  >ul{
    >li{
      padding-right: 5px;
      padding-left: 5px;
      margin:5px 0px;
      >a{
        background-color:#fff;
        display: block;
        height:100%;
        >img{
          width:100%;
        }
        .show-title{
          color: #333;
          word-break: break-all;
          padding: 0 6px;
          height: 14px;
          overflow: hidden;
          font-size: 12px;
          margin-top: 10px;
          line-height: 14px;
          text-align: left;
          margin-top: 6px;
        }
        >p{
          color: #f8601d;
          margin-bottom:0;
          padding:5px;
