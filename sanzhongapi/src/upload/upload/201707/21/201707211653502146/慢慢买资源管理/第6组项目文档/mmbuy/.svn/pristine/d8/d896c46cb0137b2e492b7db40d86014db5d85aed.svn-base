/* 商品导航栏部分 */
.gsshopnav-filter{
  box-sizing: border-box;
  border-bottom:1px solid #ccc;
  height:37px;
  width:100%;
  position: relative;
  
  line-height: 37px;
  .left-tab{
    margin-right:50px;
    padding-left:10px;
    >div{
      height:37px;
      text-align: center;
      padding:0px 0px 0px 0px;
      overflow: hidden;
        font-size: 16px;
        color:#5a5a5a;
        position: relative;
        >.glyphicon{
          font-size: 10px;
          color:#5a5a5a;
          margin-left: 3px; 
        }
        >.glyphicon-triangle-top{
          position:absolute;
          top: 2px;
          right: 1px;
          display: none;
        }
    }
  }

  .right-search{
    box-sizing: border-box;
    border-left:1px solid #ccc;
    width:50px;
    height:100%;
    position: absolute;
    right:0;
    top:0;
    >.icon-sousuomulu{
      display: block;
      width:100%;
      height:100%;
      font-size: 24px;
      color:#5a5a5a;
      position: absolute;
      left: 15px;
    }
    >.icon-cha{
      font-size: 20px;
      position:absolute;
      top:0;
      left: 15px;
      display:none;
    }
  }

}

