/*初始化*/
*{
  margin: 0;
  padding: 0;
}
ul{
  list-style:none;
}
a{
  text-decoration: none;
  color:#000;
}
a:hover {
  color: #000;
  text-decoration: none;
}

input,select,option,textarea{
  outline: none;
  }

.clearfix:before, .clearfix:after {
  /*清除浮动，最好最标准的写法*/
  content: "";
  display: table;
}

.clearfix:after {
  clear: both;
}

.clearfix {
  *zoom: 1; /*IE/7/6*/  /*兼容IE6下的写法*/
}

