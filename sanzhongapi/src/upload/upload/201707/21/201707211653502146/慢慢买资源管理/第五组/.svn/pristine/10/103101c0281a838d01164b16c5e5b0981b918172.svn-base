/*
    底部菜单栏
*/
.foot_menu {
    margin-top:25px;
    position: relative;
    width: 100%;
    height: 50px;
    /*line-height: 50;*/
    background-color: #ebebeb;
    background: -webkit-gradient(linear,0 0,0 100%,from(#ffffff),to(#e2e2e2));
    /*padding-left: 7px;*/
    border-top: 1px solid #ebebeb;
    border-bottom: 1px solid #ccc;
}
.foot_menu::before {
    content: "";
    background-color: #f2f2f2;
    position: absolute;
    top: -10px;
    width: 100%;
    height: 10px;
}
.foot_menu a {
    display: inline;
    line-height: 50px;
    color: #000;
    font-size: 14px;
    padding-left:7px;
}

/*
    底部app下载
*/
.foot_appdownload {
    padding-top:25px;
    background-color: #efefef;
}
.foot_appdownload .contain {
    border-top: 1px solid #c4c4c4;
    border-bottom: 1px solid #c4c4c4;
}
.foot_appdownload .contain a {
    float: left;
    text-align: center;
    padding:8px 0 ;
    font-size: 15px;
}
.foot_appdownload .contain a+a{
    border-left: 1px solid #c4c4c4;
}
.foot_appdownload .contain a:nth-of-type(-n+2){
    width: 30%;
}
.foot_appdownload .contain a:last-child{
    width: 40%;
}
.foot_appdownload .contain a img {
    width: 17px;
    height: 17px;
    display: inline-block;
    margin-top:-5px;
    /*vertical-align: middle ;*/
    /*float: left;;*/
}
/*底部内容文字*/
.foot_text {
    padding:15px 0;
}
.foot_text p{
    font-size: 14px;
    text-align: center;
    color:#ccc;
    padding:0;
    margin:0;
}
.foot_text p a {
    display: inline-block;
    /*float: left;*/
}
.foot_text p a:first-child {
    color: red;
}
.foot_text p a:last-child {
    color:#000;
}
/*
    底部app跳转link
*/
.app_link {
    position: fixed;
    right: 0;
    bottom: 30px;
}
.app_link a img {
    width: 60px;
}
