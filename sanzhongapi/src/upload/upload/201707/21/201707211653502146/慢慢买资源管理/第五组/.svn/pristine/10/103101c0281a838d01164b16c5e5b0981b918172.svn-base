
/*
    头部
*/

.header {
    width: 100%;
    height: 44px;
    background-color: #ff841d;
    position: relative;
}

.header .back a span {
    float: left;
    font-size: 24px;
    color: #fff;
    top: 10px;
    left: 5px;
}

.header h2 {
    text-align: center;
    font: 24px/44px "Microsoft yahei";
    color: #fff;
    margin: 0;
}

.header .download {
    width: 50px;
    height: 44px;
    /*background-color: #f0f;*/
    position: absolute;
    top: 0;
    right: 10px;
}

.header .download img {
    display: block;
    width: 35px;
    height: 40px;
    margin: 0 auto;
    padding-top: 5px;
}

/*
    商品列表
*/
.good_list .container {
    /*background-color: pink;*/
    width: 300px;
    /*height: 100px;*/
    font-size:16px;
    padding-top:10px;
}
.good_list .container a {
    display: inline-block;
    background-color: #f4f4f4;
    margin-top: 7px;
    padding: 10px 7px;
    border: 1px solid #bfbfbf;
    text-indent: 7px;
    color:#000;
    /*vertical-align: baseline;*/
}
.good_list .container a img {
    display: inline-block;
    width: 18px;
    height: 18px;
    margin-top: 1px;
}
