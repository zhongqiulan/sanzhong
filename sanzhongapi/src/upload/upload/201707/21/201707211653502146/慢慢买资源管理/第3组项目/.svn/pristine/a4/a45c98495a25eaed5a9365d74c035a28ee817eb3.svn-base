  }





/*遮罩层*/
 .visible {
    width: 100%;
    height: 100%;
    z-index: 999;
    position: fixed;
    top:0;
    left: 0;
    transition:all 2s;
    background: rgba(0, 0, 0, 0.6);
    overflow: hidden;
    display: none;
}

  .visible .kfc_gallery {
      width: 280px;
      height: 200px;
      position: relative;
      top:50%;
      left: 50%;
      transform: translate(-50%,-50%);
  }

.visible img {
     position: absolute;
     top:50%;
     left:50%;
     transform: translate(-50%,-50%);
 }

#previous{
    width: 40px;
    height: 60px;
    background-color:rgba(0, 0, 0, 0.7);
    text-align: center;
    line-height: 60px;
    font-size: 26px;
    position:absolute;
    top:50%;
    left:0;
    transform:translate(0,-50%);
    border-radius: 3px;
    color: #fff;
}

#next{
    width: 40px;
    height: 60px;
    background-color:rgba(0, 0, 0, 0.7);
    text-align: center;
    line-height: 60px;
    font-size: 26px;
    position:absolute;
    top:50%;
    right:0;
    transform:translate(0,-50%);
    border-radius: 3px;
    color: #fff;
}




