body {
  overflow-x: hidden;
}
.mmm_top .top_conten > a .iconback {
  color: #fff;
  font-size: 20px;
}
.mmm_top .top_conten h4 {
  font-size: 14px;
  color: #fff;
  margin-top: 0px;
  position: absolute;
  margin-left: 50%;
  line-height: 51px;
  font-size: 20px;
  font-weight: 700;
  transform: translateX(-50%);
}
.zhekou_content ul li {
  border-right: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  width: 50%;
  float: left;
  padding-top: 20px;
  padding-bottom: 10px;
}
.zhekou_content ul li :nth-of-type(3) {
  clear: both;
}
.zhekou_content ul li a {
  display: block;
  width: 100%;
  height: 100%;
  text-decoration: none;
}
.zhekou_content ul li a > img {
  width: 140px;
  height: 140px;
  margin: 0 auto;
}
.zhekou_content ul li a .descripton {
  padding-left: 18px;
}
.zhekou_content ul li a .descripton .product_des {
  font-size: 14px;
  font-weight: 700;
  height: 36px;
  overflow: hidden;
  line-height: 18px;
  color: #333333;
}
.zhekou_content ul li a .descripton p {
  height: 18px;
  line-height: 18px;
  overflow: hidden;
}
.zhekou_content ul li a .descripton .price {
  color: #ff6c00;
  margin-top: -10px;
}
.zhekou_content ul li a .descripton .bottom_des {
  color: #a1a1a1;
  font-size: 12px;
}
.loading img {
  width: 32px;
  margin: 10px auto;
}
a:focus,
a:active {
  text-decoration: none;
  color: inherit;
  display: block;
  /* a标签点击高亮  */
}
.content .description {
  word-break: break-all;
  color: #5a5a5a;
  padding-left: 10px;
}
.content .description .title {
  font-size: 18px;
  font-weight: 700;
}
.content .description > p {
  font-size: 16px;
  line-height: 24px;
  margin-top: 6px;
  margin-bottom: 6px;
}
.content .description .price {
  color: #ff6c00;
  font-weight: 700;
  font-size: 15px;
}
.content .description .subtitle {
  font-size: 12px;
  color: #999999;
}
.content .description .coupon a {
  display: inline-block;
  color: #4682c5;
}
.content .pic {
  float: right;
  margin-top: 130px;
  overflow: hidden;
}
.content .pic > img {
  width: 120px;
}
.btnBuy {
  margin-top: 50px;
  padding: 0 15px;
}
.btnBuy a {
  background-color: #FF9000;
  color: #fff;
  padding: 10px 0;
  border-radius: 4px;
  text-align: center;
}
.tit {
  padding: 0 10px;
  margin-top: 20px;
  font-size: 16px;
}
.reply {
  padding: 0 10px;
  margin-top: 10px;
  box-sizing: border-box;
}
.reply .form {
  border: 2px solid #ECEAE8;
  border-radius: 5px;
}
.reply .input_area {
  height: 68px;
  outline: none;
  resize: none;
  overflow-x: hidden;
  overflow-y: auto;
  border: none;
  color: #666;
  width: 100%;
}
.reply .ctrl {
  width: 100%;
  height: 36px;
  background-color: #fbfbfb;
  border-top: 1px solid #f2f2f2;
}
.reply .ctrl .tjdp {
  width: 100px;
  background-color: #ff841d;
  border: none;
  height: 100%;
  float: right;
  color: #fff;
  display: inline;
  font-size: 16px;
  margin-right: -2px;
}
.newcomment_content {
  margin-top: 15px;
  color: #606060;
}
.newcomment_content > h3 {
  font-size: 18px;
  padding: 0 15px;
}
.newcomment_content .media {
  padding: 0 15px 0px;
  border-bottom: 1px solid #ccc;
}
.newcomment_content .media .media-left img.media-object {
  width: 40px;
  border-radius: 20px;
}
.newcomment_content .media-body .media-heading {
  display: inline-block;
  color: #5997c0;
  font-size: 13px;
}
.newcomment_content .media-body .time {
  display: inline-block;
  float: right;
  color: #999999;
  font-size: 13px;
}
.newcomment_content .media-body .user_comment {
  font-size: 15px;
  margin-top: 5px;
}
.loading img {
  width: 32px;
  margin: 10px auto;
}
